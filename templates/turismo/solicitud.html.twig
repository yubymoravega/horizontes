                }).on("change", function () {
                    solicitud_turismo_rentFechaHasta.datepicker("option", "minDate", getDate(this));
                }),
                solicitud_turismo_rentFechaHasta = $("#solicitud_turismo_rentFechaHasta").datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 1
                }).on("change", function () {
                    solicitud_turismo_rentFechaDesde.datepicker("option", "maxDate", getDate(this));
