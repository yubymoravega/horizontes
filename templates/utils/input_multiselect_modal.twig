{# ------------- Modal Inputs ----------------- #}
<div class="modal fade" id="input-multiselt-modal" role="dialog" data-backdrop="static" data-keyboard="false"
     aria-hidden="true" style="z-index: 1060">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 850px;" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h4 class="modal-title text-light">Modal Multiselect Inputs</h4>
                <button class="close text-light" type="button" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-dark-app d-flex flex-column">
                <div style="height: 450px; overflow-y: auto;">
                    <table class="table-small-rows table table-hover text-light">
                    </table>
                </div>
                <div class="d-flex mt-4">
                    <button class="mr-auto btn btn-outline-secondary" type="button" data-dismiss="modal"
                            aria-label="Cerrar">
                        <span aria-hidden="true">Cancelar</span>
                    </button>
                    <div class="ml-2">
                        <button type="button" class="my-0 btn btn-outline-secondary"
                                id="btnok-input-multiselt-modal">Aceptar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>