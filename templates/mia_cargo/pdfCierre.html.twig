        {% if data.moneda == "DOP" %}
          <td>{{data.monto}}</td> {% set dop = dop + data.monto %}
        {% else %}
        <td></td>
         <td>{{data.monto}}</td>
{% endif %}
     </tr>
    {% endfor %}
      <td>Empleado: {{cierre.empleado}}</td>
      <td>Fecha: {{cierre.fecha|date("d/m/Y ")}}</td>
      <td>Total: {{dop |number_format(2, '.', ',')}} </td>
      <td>Total: {{usd |number_format(2, '.', ',')}}</td>
       <tr>
  </tbody>
</table>

