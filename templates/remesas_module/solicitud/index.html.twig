                    cl(total_por_moneda)
                    str_recibir += (total_por_moneda.toFixed(2)+' '+monedas_listado[j]+', ')
                }


                $('#parragraph_sumbit').text('Usted ha configurado un total de ' + list_table.length + ' remesas, el precio total a' +
                    ' pagar es de ' + total_pagar.toFixed(2) + ' ' + $('#currency option:selected').text() + ', y se entregar√° a los beneficiarios un total ' +
                    'de ' + str_recibir + '. ¬øEst√° seguro que desea continuar?.')
