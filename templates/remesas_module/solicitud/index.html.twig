                    new_beneficiario = true
                    changeStatus(1)
                    $('#beneficiarios_clientes_id_moneda').find('option').remove()
                    $('#beneficiarios_clientes_id_moneda').prepend('<option value = "0" selected disabled>...seleccione...</option>')
                    $('#beneficiarios_clientes_id_moneda').find('option').remove()
