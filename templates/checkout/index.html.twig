{% block javascripts %}
    {{ parent() }}
    <script>
        let list_pagos = []
        let valor = 0
        let impuestos_array = []
        let impuesto_total = 0
        const impuestos_json = JSON.parse('{{ impuestos|json_encode()|raw }}')
        let descuentos_array = []
        let descuentos_total = 0

        function changeDescuento(id_servicio, subtotal) {
            let campo = $('#input-' + id_servicio)
            let check = $('#check-' + id_servicio)
            let total_txt = $('#' + id_servicio + '-total')
            let descuento_subtotal = 0

            if (check.is(':checked')) {
                campo.prop('placeholder', 'Valor Fijo a Descontar')
                if (campo.val() != '') {
                    updateDescuento(id_servicio, (parseFloat(campo.val())))
                    descuento_subtotal = parseFloat(subtotal) - parseFloat(campo.val())
                }
            } else {
                campo.prop('placeholder', 'Porciento a Descontar')
                if (campo.val() != '') {
                    updateDescuento(id_servicio, (parseFloat(subtotal) * parseFloat(campo.val()) / 100))
                    descuento_subtotal = parseFloat(subtotal) - (parseFloat(subtotal) * parseFloat(campo.val()) / 100)
                }
            }
            if (campo.val() == '') {
                descuento_subtotal = subtotal
                updateDescuento(id_servicio, 0)
            }
            updateImpuestos(id_servicio, descuento_subtotal)
            let porciento_impuesto = getImpuestos(id_servicio)
            total_txt.text((descuento_subtotal + (descuento_subtotal * porciento_impuesto / 100)).toFixed(2))
            updateTotalCheckout()
        }

        function updateDescuento(id_servicio, descuento) {
            let nuevo = true
            for (let i = 0; i < descuentos_array.length; i++) {
                if (descuentos_array[i]['id_servicio'] == id_servicio) {
                    nuevo = false
                    descuentos_array[i]['descuento'] = parseFloat(descuento)
                }
            }
            if (nuevo) {
                descuentos_array.push({
                    'id_servicio': id_servicio,
                    'descuento': parseFloat(descuento)
                })
            }

            let total = 0
            for (let i = 0; i < descuentos_array.length; i++) {
                total += parseFloat(descuentos_array[i]['descuento'])
            }
            if (total > 0)
                $('#descuentos_paragraph').text(total.toFixed(2))
            else
                $('#descuentos_paragraph').text('0.00')
        }

        function updateTotalCheckout() {
            let total = 0
            for (let i = 0; i < descuentos_array.length; i++) {
                total -= parseFloat(descuentos_array[i]['descuento'])
            }
            let subtotal_template = $('#subtotal_column').text()
            total += parseFloat(subtotal_template)
            for (let i = 0; i < impuestos_array.length; i++)
                total += parseFloat(impuestos_array[i]['monto'])

            $('#total_tabla').text(total.toFixed(2))
        }

        function seleccionarImpuesto(impuesto, servicio, subtotal, valor) {
            let checkbox = $('#' + impuesto + '-' + servicio)
            let txt_impuesto = $('#' + servicio + '-impuesto')
            let txt_total = $('#' + servicio + '-total')

            let campo = $('#input-' + servicio)
            let check = $('#check-' + servicio)
            let total_txt = $('#' + servicio + '-total')

            let descuento_subtotal = parseFloat(subtotal)
            if (campo.val() != '') {
                if (check.is(':checked')) {
                    campo.prop('placeholder', 'Valor Fijo a Descontar')
                    descuento_subtotal = parseFloat(subtotal) - parseFloat(campo.val())
                } else {
                    campo.prop('placeholder', 'Porciento a Descontar')
                    descuento_subtotal = parseFloat(subtotal) - (parseFloat(subtotal) * parseFloat(campo.val()) / 100)
                }
            }

            let monto = descuento_subtotal * valor / 100
            let impuesto_acumulado = parseFloat(txt_impuesto.text())
            let result = 0
            if (checkbox.is(':checked')) {
                result = impuesto_acumulado + monto
            } else {
                result = impuesto_acumulado - monto
            }

            let impuesto_contenido = false
            if (impuestos_array.length > 0)
                for (let i = 0; i < impuestos_array.length; i++) {
                    if (impuestos_array[i]['id'] == impuesto) {
                        impuesto_contenido = true
                        if (checkbox.is(':checked')) {
                            impuestos_array[i]['monto'] = (parseFloat(impuestos_array[i]['monto']) + monto).toFixed(2)
                        } else
                            impuestos_array[i]['monto'] = (parseFloat(impuestos_array[i]['monto']) - monto).toFixed(2)
                    }

                }
            if (!impuesto_contenido) {
                impuestos_array.push({
                    'id': impuesto,
                    'monto': monto.toFixed(2)
                })
            }

            txt_impuesto.text(result.toFixed(2))
            txt_total.text((subtotal + result).toFixed(2))
            let nombre = ''
            $('#impuestos_rows').find('tr').remove()
            for (let i = 0; i < impuestos_array.length; i++) {
                if (parseFloat(impuestos_array[i]['monto']) > 0) {
                    nombre = getNombreImpuesto(impuestos_array[i]['id'])
                    $('#impuestos_rows').append(`<tr>
                        <td class="font-weight-bold text-right"> ${nombre}</td>
                        <td width="100px" class="font-weight-bold text-right"> ${impuestos_array[i]['monto']} </td>
                        </tr>`
                    );
                }
            }
            updateTotalCheckout()
        }

        function updateImpuestos(id_servicio, subtotal) {
            let element_menu = '';
            let porciento = 0;
            impuestos_json.forEach(function (valor) {
                    element_menu = $('#' + valor.id + '-' + id_servicio)
                    if (element_menu.is(':checked'))
                        porciento += parseFloat(valor.valor)
                }
            )
            $('#' + id_servicio + '-impuesto').text((subtotal * porciento / 100).toFixed(2));
        }

        function getImpuestos(id_servicio) {
            let element_menu = '';
            let porciento = 0;
            impuestos_json.forEach(function (valor) {
                    element_menu = $('#' + valor.id + '-' + id_servicio)
                    if (element_menu.is(':checked'))
                        porciento += parseFloat(valor.valor)
                }
            )
            return porciento;
        }

        function getNombreImpuesto(id_impuesto) {
            let nombre_impuesto = ''
            impuestos_json.forEach(function (valor) {
                    if (valor.id == id_impuesto)
                        nombre_impuesto = valor.nombre
                }
            )
            return nombre_impuesto
        }

        function deleteElementCarrito(idCarrito, id_servicio) {
            $('#confirm__modal').modal('show')
            $('#confirm__modal__body').text('Está seguro que desea eliminar el servicio?')
            $('#_token__confirm__modal').val($('#__token').val())
            $("#confirm__modal__btn_ok").click(function () {
                const path = window.location.pathname
                $('body').append(`
                    <form action='/turismo/gestion-consular/solucitud/delete-carrito'
                         method="post" id='form_delet_element_servicio_carrito'>
                        <input type='hidden' name='idCarrito' value='${idCarrito}'/>
                        <input type='hidden' name='id_servicio' value='${id_servicio}'/>
                        <input type='hidden' name='path' value='${path}'/>
                    </form>`)
                const fomrulario = $('#form_delet_element_servicio_carrito')
                fomrulario.submit()
                fomrulario.remove()
            });
        }

        function editarIten(id) {
            window.location.href = "/remesas.json.editar/" + id;
        };

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        function eliminarIten(id) {

            $('#confirm__modal').modal('show');

            $("#confirm__modal__btn_ok").click(function () {

                $.ajax({
                    type: 'POST',
                    data: {'code': '200'},
                    url: window.location.protocol + "//" + location.hostname + ":" + window.location.port + "/remesas.json.borrar/" + id,
                    dataType: 'html',
                    success: async function (data) {

                        $('#confirm__modal').modal('hide');
                        $('#alert-good').html('<div class=" text-center alert alert-success alert-dismissible fade show" role="alert"> Remesa Borrada Del Carrito<button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button></div>');
                        $('.alert').alert();

                        //await sleep(1000);

                        window.location.href = "/checkout";

                    }
                });

            });
        };

        function cotizacion() {
            let msg = '¿Está seguro que desa hacer la cotización?';
            if (list_pagos.length == 0) {
                msg = 'Usted no ha definido los plazos de pago, la cotización se cancelará automaticamente a los 7 día de eleborada, si aún no ha definido los pagos. ¿Está seguro que desa hacer la cotización?'
            }
            $('#mssage__confirm').text(msg)
            $('#confirm__modal_cotizacion').modal('show');
            $("#confirm__modal__btn_contizacion").on('click', function () {
                let fecha_maxima = $('#planificacion_pagos_fecha_maxima_pago').val()
                let palzos = $('#planificacion_pagos_plazos').val()
                const listado = JSON.stringify(list_pagos)
                $('body').append(`
                    <form action='/checkout-services/cotizacion'
                         method="post" id='form_cotizacion' target='_self'>
                        <input type='text' hidden name='fecha_maxima' value='${fecha_maxima}'/>
                        <input type='text' hidden name='palzos' value='${palzos}'/>
                        <input type='hidden' hidden name='list_json' value='${listado}' />
                    </form>`)
                const fomrulario = $('#form_cotizacion')
                fomrulario.submit()
                fomrulario.remove()
            });
        }

        function cobrar() {
            $('#confirm__modal_pago').modal('show');
            $("#confirm__modal__btn_pago").click(function () {
                // window.location.href = "/cotizacion/pago/";
            });
        }

        //    --------- javascript de los plazos de pago
        $('#planificacion_pagos_fecha_maxima_pago').on('change', function () {
            $('#body-table-plazos').find('tr').remove()
        })
        $('#planificacion_pagos_plazos').on('change', function () {
            $('#body-table-plazos').find('tr').remove()
        })

        $('#planificacion_pagos_calcular').on('click', function () {
            list_pagos = []
            let fecha = $('#planificacion_pagos_fecha_maxima_pago').val()
            let tipo = $('#planificacion_pagos_plazos').val()
            let today = moment(new Date()).subtract(1, 'days')
            var fecha1 = moment(fecha);

            let cantidad_tiempo = 0
            let tiempo_sumar = 0;
            let clasificador = '';
            if (tipo == 1) {
                cantidad_tiempo = fecha1.diff(today, 'days')
                clasificador = 'days';
                tiempo_sumar = 1;
            }
            if (tipo == 2) {
                cantidad_tiempo = fecha1.diff(today, 'weeks')
                clasificador = 'days';
                tiempo_sumar = 7;
            }
            if (tipo == 3) {
                cantidad_tiempo = fecha1.diff(today, 'weeks') / 2
                clasificador = 'days';
                tiempo_sumar = 15;
            }
            if (tipo == 4) {
                cantidad_tiempo = fecha1.diff(today, 'months')
                clasificador = 'months';
                tiempo_sumar = 1;
            }
            if (cantidad_tiempo == 0 && tipo == 4) {
                alertTemplate('El tiempo para el plazo no supera el mes, por lo tanto no puede seleccionar ese plazo de pago.', 'danger')
            } else {
                let total = parseFloat($('#total_tabla').text());
                let minimo = {{ minimo_pagar }};

                let cuota = (total / (cantidad_tiempo - 1)).toFixed(2)
                if (cuota < minimo)
                    cuota = ((total - minimo) / (cantidad_tiempo - 1)).toFixed(2)

                let fecha_pago = moment().subtract(1, 'days')
                $('#body-table-plazos').find('tr').remove()
                let cuota_asignada = 0;

                if (cantidad_tiempo == 1) {
                    // fecha_pago = fecha_pago.add(tiempo_sumar, clasificador);
                    fecha_pago = fecha_pago.add(tiempo_sumar, clasificador);
                    valor = total
                    list_pagos.push({
                        fecha_pago,
                        valor
                    })
                    $('#body-table-plazos').append(`<tr>
                            <td class="text-center"> ${fecha_pago.format('DD/MM/YYYY')}</td>
                            <td class="text-right"> ${total} </td>
                        </tr>`
                    );
                } else
                    for (let i = 0; i < cantidad_tiempo; i++) {
                        if (i == 0)
                            fecha_pago = moment();
                        else
                            fecha_pago = fecha_pago.add(tiempo_sumar, clasificador);

                        if (i == cantidad_tiempo - 1) {
                            cuota = (parseFloat(total) - parseFloat(cuota_asignada)).toFixed(2)
                        } else if (i > 0) {
                            cuota_asignada += parseFloat(cuota)
                        }
                        if (i == 0 && cuota < minimo) {
                            valor = minimo
                            list_pagos.push({fecha_pago, valor})
                            cuota_asignada += parseFloat(minimo)
                            $('#body-table-plazos').append(`<tr>
                            <td class="text-center"> ${fecha_pago.format('DD/MM/YYYY')}</td>
                            <td class="text-right"> ${minimo.toFixed(2)} </td>
                        </tr>`
                            );
                        } else {
                            valor = cuota
                            list_pagos.push({fecha_pago, valor})
                            $('#body-table-plazos').append(`<tr>
                            <td class="text-center"> ${fecha_pago.format('DD/MM/YYYY')}</td>
                            <td class="text-right"> ${cuota} </td>
                        </tr>`
                            );
                        }
                    }
            }
        })
    </script>

