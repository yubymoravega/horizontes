{% extends 'base.html.twig' %}
{% block content %}
    {% include 'breadcrumbs.html.twig' %}

    <h1 class="text-confirmar" style="text-align: center; ">Checkout</h1>
    <hr class="divider-white bg-mantis-white mb-0">

    <!-- Shop Checkout-->
    <section class="section novi-background section-20 section-sm-20" style="color:white;">
        <div class="container-fluid">
            <div class="rd-material-tabs checkout-tabs">
                <div class="rd-material-tabs__container">
                    <div>
                        <div class="row justify-content-sm-center">
                            <div class="col-md-12 col-xl-12">
                                <div class="table-responsive">
                                    <table class="table" style="color:white;">
                                        <tbody>
                                        {% for item in carrito %}
                                            <tr>
                                                <td style="border-top: 4px solid;" class="row-group-conta" colspan="2">
                                                    Servicio:
                                                    <i>{{ item.servicio }}</i></td>
                                                <td style="border-top: 4px solid;" class="row-group-conta text-right">
                                                    Subtotal:
                                                    <br><i>{{ item.sub_total }}</i></td>
                                                <td style="border-top: 4px solid;" width="260px"
                                                    class="row-group-conta text-right">
                                                    <form name="unidad" method="post" class="text-left"
                                                          id="form_modal_target" autocomplete="off"
                                                          novalidate="novalidate">
                                                        <div class="form-group input-group input-group-sm d-block">
                                                            Descuento en % (fijo <input
                                                                    type="checkbox"
                                                                    name="check-{{ item.id_servicio }}"
                                                                    id="check-{{ item.id_servicio }}"
                                                                    onclick="changeDescuento({{ item.id_servicio }},{{ item.sub_total_value }})">
                                                            )
                                                            <input type="number" id="input-{{ item.id_servicio }}"
                                                                   placeholder="Porciento a Descontar"
                                                                   onkeyup="changeDescuento({{ item.id_servicio }},{{ item.sub_total_value }})"
                                                                   class="form-control w-100 modal-body bg-dark-app form-group input-group input-group-sm d-block"
                                                            >
                                                        </div>
                                                    </form>
                                                </td>
                                                <td style="border-top: 4px solid;" class="row-group-conta text-right">
                                                    <div class="btn-group open">
                                                        <button type="button"
                                                                class="multiselect dropdown-toggle btn btn-sm btn-outline-warning"
                                                                data-toggle="dropdown"
                                                                title="Impuesto" aria-expanded="true"><span
                                                                    class="multiselect-selected-text">Impuestos</span>
                                                            <b class="caret"></b></button>
                                                        <ul class="multiselect-container dropdown-menu"
                                                            style="width: 210px !important;">
                                                            {% for item_impuesto in impuestos %}
                                                                <li>
                                                                    <a tabindex="0">
                                                                        <label class="checkbox">
                                                                            <input type="checkbox"
                                                                                   onclick="seleccionarImpuesto({{ item_impuesto.id }},{{ item.id_servicio }},{{ item.sub_total_value }},{{ item_impuesto.valor }})"
                                                                                   id="{{ item_impuesto.id }}-{{ item.id_servicio }}"
                                                                                   value="{{ item_impuesto.valor }}">
                                                                            {{ item_impuesto.nombre }}
                                                                        </label>
                                                                    </a>
                                                                </li>
                                                            {% endfor %}
                                                        </ul>
                                                    </div>
                                                    <br><i id="{{ item.id_servicio }}-impuesto">0.00</i></td>
                                                <td style="border-top: 4px solid;" class="row-group-conta text-right">
                                                    Total:
                                                    <br><i id="{{ item.id_servicio }}-total">{{ item.sub_total }}</i>
                                                </td>
                                            </tr>
                                            {% if item.id_servicio == 11 %}
                                                {# Cabecera y cuerpo de la tabla que muestra el contenido para los tramites migratorios #}
                                                <tr>
                                                    <td class="text-left row-group-subconta">Nombre</td>
                                                    <td class="text-left row-group-subconta">Primer Apellido</td>
                                                    <td class="text-left row-group-subconta">Segundo Apellido</td>
                                                    <td class="text-left row-group-subconta">Teléfono Celular</td>
                                                    <td class="text-left row-group-subconta">Teléfono Fijo</td>
                                                    <td class="text-right row-group-subconta">Eliminar</td>
                                                </tr>
                                                {% for new_item in item.data %}
                                                    <tr>
                                                        <td class="text-left">{{ new_item.nombre }}</td>
                                                        <td class="text-left">{{ new_item.primer_apellido }}</td>
                                                        <td class="text-left">{{ new_item.segundo_apellido }}</td>
                                                        <td class="text-left">{{ new_item.telefono_celular }}</td>
                                                        <td class="text-left">{{ new_item.telefono_fijo }}</td>
                                                        <td class="text-right">
                                                            <button type="button" class="btn btn-danger btn-sm ml-1"
                                                                    data-toggle="tooltip"
                                                                    data-placement="bottom" title="Eliminar"
                                                                    onclick='deleteElementCarrito({{ new_item.idCarrito }},{{ item.id_servicio }})'>
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            {% elseif item.id_servicio == 4 %}
                                                {# Cabecera y cuerpo de la tabla que muestra el contenido para las remesas #}
                                                <tr>
                                                    <td class="text-left row-group-subconta">Beneficiario</td>
                                                    <td class="text-left row-group-subconta">Datos Contactos</td>
                                                    <td class="text-left row-group-subconta" colspan="2">Dirección
                                                    </td>
                                                    <td class="text-right row-group-subconta">Monto a Recibir</td>
                                                    <td class="text-right row-group-subconta">Eliminar</td>
                                                </tr>
                                                {% for new_item in item.data %}
                                                    <tr>
                                                        <td class="text-left">{{ new_item.nombre_ }} {{ new_item.primer_apellido_ }} {{ new_item.segundo_apellido_ }}</td>
                                                        <td class="text-left">{{ new_item.primer_telefono_ }} {{ new_item.segundo_telefono_ }}</td>
                                                        <td class="text-left" colspan="2">{{ new_item.calle_ }}
                                                            {% if  new_item.entre_ != '' %}
                                                                e/ {{ new_item.entre_ }}
                                                            {% endif %}
                                                            {% if  new_item.y_ != '' %}
                                                                & {{ new_item.y_ }}
                                                            {% endif %}
                                                            {% if  new_item.nro_casa_ != '' %}
                                                                # {{ new_item.nro_casa_ }}
                                                            {% endif %}
                                                            {% if  new_item.edificio_ != '' %}
                                                                Edif: {{ new_item.efificio_ }}
                                                            {% endif %}
                                                            {% if  new_item.apto_ != '' %}
                                                                Apto: {{ new_item.apto_ }}
                                                            {% endif %}
                                                            {% if  new_item.reparto_ != '' %}
                                                                Reparto: {{ new_item.reparto_ }}
                                                            {% endif %}
                                                        </td>
                                                        <td class="text-right">
                                                            {{ new_item.monto_recibir_ }} {{ new_item.nombre_moneda_recibir }}
                                                        </td>
                                                        <td class="text-right">
                                                            <button type="button" class="btn btn-danger btn-sm ml-1"
                                                                    data-toggle="tooltip"
                                                                    data-placement="bottom" title="Eliminar"
                                                                    onclick='deleteElementCarrito({{ new_item.idCarrito }},{{ item.id_servicio }})'>
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="offset-top-10 text-right">
                                    <table class="w-100 text-right">
                                        <tbody>
                                        <tr>
                                            <td class="text-right font-weight-bold">
                                                Subtotal:
                                            </td>
                                            <td width="100px" class="font-weight-bold text-right">
                                                <p id="subtotal_column">{{ total }}</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-right font-weight-bold">
                                                Descuentos:
                                            </td>
                                            <td width="100px" class="font-weight-bold text-right">
                                                <p id="descuentos_paragraph">0.00</p>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <table class="w-100 text-right">
                                        <tbody id="impuestos_rows">
                                        <tr>
                                            <td class="text-right font-weight-bold">
                                                Impuestos:
                                            </td>
                                            <td width="100px" class="font-weight-bold text-right">
                                                0.00
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <table class="w-100 text-right">
                                        <tbody>
                                        <tr>
                                            <td class="text-right font-weight-bold">
                                                Total:
                                            </td>
                                            <td width="100px" class="font-weight-bold text-right">
                                                &nbsp; <span id="total_tabla">{{ total }}</span>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>

                                </div>
                                {# ------------ componente de los plazos de pago ------------------- #}
                                {% include 'checkout/plazos_pagos_cotizacion.html.twig' %}
                                {# ------------ componente de los plazos de pago ------------------- #}

                                <div class="offset-top-10 text-right">
                                    <a onclick="cotizacion()"
                                       class="btn btn-dark btn-icon btn-icon-right offset-top-41 checkout-step-btn"
                                       data-index-to="1" href="#">
                                        <span class="novi-icon icon icon-xxs mdi mdi-clock text-carrot"></span>Cotizacion</a>

                                    <a onclick="cobrar()"
                                       class="btn btn-dark btn-icon btn-icon-right offset-top-41 checkout-step-btn"
                                       data-index-to="1" href="#">
