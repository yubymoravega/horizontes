{% extends 'base.html.twig' %}

{% block content %}
{% include 'breadcrumbs.html.twig' %}
<link rel="stylesheet" href="{{ asset('css/tarjetas.css') }}"  />
<img class="imagen-tarjetas-confirmar" src="{{ asset('images/iconos/credit-card.svg') }}" >  
<h1 class="text-confirmar" style="text-align: center; ">Procesar Cobro</h1>
<hr class="divider bg-mantis">

<div class="procesar-cobro">
  
    <div> 
     <h2 class="text-confirmar" style="text-align: center; "> Cliente: {{nombre}} {{apellido}}</h2> 
    <h2 class="text-confirmar" style="stext-align: center; ">A cobrar: $ {{monto}}</h2> 
    
    </div>
    <div id='credit' class="credit-card {{tarjeta.brand}} selectable">
        <div class="credit-card-last4">
           {{tarjeta.last4}}
        </div>
        <div class="credit-card-expiry">
            {{tarjeta.exp_month}}/{{tarjeta.exp_year}}
        </div>
    </div>
    
     <a style="text-decoration: none;" class='boton-agregar-tarjeta' href="{{ path('confirm', {'tel': tel, 'monto': monto, 'last4':tarjeta.last4 })}}">
        Procesar
    </a>
 </div>
 
{% endblock %}
