                    <div class="col-9 text-light container d-flex justify-content-center mb-3">
                        {{ form_start(form_tranfer) }}
                        <div class="row justify-content-center form-group input-group input-group-sm d-inline-flex">
                            <div class="col-3 input-group-sm mt-0">
                                {{ form_label(form_tranfer.cant_adulto) }}
                                {{ form_widget(form_tranfer.cant_adulto) }}
