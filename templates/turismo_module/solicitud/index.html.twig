                            <div class="col-3 input-group-sm mt-0">
                                {{ form_label(form_tranfer.cant_nino) }}
                                {{ form_widget(form_tranfer.cant_nino) }}
                            </div>
                            <div class="col-3 input-group-sm mt-0">
