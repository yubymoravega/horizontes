        </div>
        {# end header #}
        <div>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="vuelo-tab" data-toggle="tab" href="#vuelo" role="tab" aria-controls="vuelo" aria-selected="true"><span>Datos de Vuelo</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="hotel-tab" data-toggle="tab" href="#hotel" role="tab" aria-controls="hotel" aria-selected="false"><span>Datos de Hotel</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tranfer-tab" data-toggle="tab" href="#tranfer" role="tab" aria-controls="tranfer" aria-selected="false">Datos del tranfer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tour-tab" data-toggle="tab" href="#tour" role="tab" aria-controls="tour" aria-selected="false">Datos de Tour</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="renta-tab" data-toggle="tab" href="#renta" role="tab" aria-controls="renta" aria-selected="false">Datos de la Renta de autos</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="vuelo" role="tabpanel" aria-labelledby="vuelo-tab">
                    {# header #}
                    <div class=" align-items-center text-center">
                        <h2 class="text-reporte text-center mr-0 text-white mt-2">
                            Solicitud de Vuelo
                        </h2>
                    </div>
                    {# end header #}
                    <div class="col-9 text-light container d-flex justify-content-center mb-3">
                        {{ form_start(form_vuelo) }}
                        <div class="row justify-content-center form-group input-group input-group-sm d-inline-flex">
                            <div class="col-4 input-group-sm">
                                {{ form_label(form_vuelo.cant_adulto) }}
                                {{ form_widget(form_vuelo.cant_adulto) }}
                            </div>
                            <div class="col-4 input-group-sm mt-0">
                                {{ form_label(form_vuelo.cant_nino) }}
                                {{ form_widget(form_vuelo.cant_nino) }}
                            </div>
                            <div class="col-4 input-group-sm mt-0">
                                {{ form_label(form_vuelo.origen) }}
                                {{ form_widget(form_vuelo.origen) }}
                            </div>
                        </div>
                        <div class="row justify-content-center form-group input-group input-group-sm d-inline-flex mt-0">
                            <div class="col-4 input-group-sm mt-0">
                                {{ form_label(form_vuelo.destino) }}
                                {{ form_widget(form_vuelo.destino) }}
                            </div>
                            <div class="col-4 input-group-sm mt-0">
                                <label for="fecha_vuelo">Fecha de Vuelo</label>
                                {# { form_widget(form_vuelo.fecha) }#}
                                <input type="text" class=" w-100 form-control" id="fecha_vuelo">
                            </div>
                            <div class="col-4 input-group-sm mt-4" style="padding-top: 10px;">
                                <label for="retorno">Ida/Retorno</label>
                                {# { form_widget(form_vuelo.fecha) }#}
                                <input id="retorno" type="checkbox" checked data-toggle="toggle" data-on="Ida" data-off="Ida/Retorno" data-size="sm" data-onstyle="outline-warning">
                            </div>
                        </div>
                        <div class="row justify-content-center form-group input-group input-group-sm d-inline-flex mt-0">
                            <div class="col input-group-sm">
                                {{ form_label(form_vuelo.comentario) }}
                                {{ form_widget(form_vuelo.comentario) }}
                            </div>
                        </div>
                    </div>
                    {{ form_end(form_vuelo) }}
                </div>
                <div class="tab-pane fade" id="hotel" role="tabpanel" aria-labelledby="hotel-tab">
