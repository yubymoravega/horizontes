{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('datetime/js/moment.min.js') }}"></script>
    <script src="{{ asset('datetime/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('switch/js/bootstrap4-toggle.min.js') }}"></script>
    <script>
        const TEXT_SELECT = '... seleccione ...';
        $(document).ready(function () {
            $('select').prepend('<option selected = "false" value = "-1" disabled>' + TEXT_SELECT + '</option>')
