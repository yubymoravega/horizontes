                                {{ form_widget(form_hotel.destino) }}
                            </div>
                        </div>
                        <div class="row justify-content-center form-group input-group input-group-sm d-inline-flex mt-0">
                            <div class="col-3 input-group-sm mt-0">
                                <label for="categoria">Categoria de Hotel</label>
                                <input type="text" name="categoria" class=" w-100 form-control" id="categoria">
                            </div>
                            <div class="col-3 input-group-sm mt-0">
                                <label for="plan">Plan del Hotel</label>
                                <input type="text" name="plan" class=" w-100 form-control" id="plan">
                            </div>
                            <div class="col-3 input-group-sm mt-0">
                                <label for="fecha_hoteld">Fecha desde</label>
                                <input type="text" class=" w-100 form-control" id="fecha_hoteld">
