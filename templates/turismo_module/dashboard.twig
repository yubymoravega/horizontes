{% extends 'base.html.twig' %}
{% block content %}
    {% include 'breadcrumbs.html.twig' %}
    <!-- Classic Breadcrumbs-->
    <input type="text" id="nombre_cliente" hidden disabled value="{{ nombre }}">
    <input type="text" id="apellidos_cliente" hidden disabled value="{{ apellidos }}">
    <input type="text" id="correo_cliente" hidden disabled value="{{ correo }}">
    <input type="text" id="direccion_cliente" hidden disabled value="{{ direccion }}">
    <input type="text" id="telefono_cliente" hidden disabled value="{{ telefono }}">
    <input type="text" id="id_cliente_cliente" hidden disabled value="{{ id_cliente }}">
    <div class="cards-list">
        <div class="card 1" id="visado_card">
            <div class="card_image">
                <img src="{{ asset('images/servicios/telecomunicaciones.png') }}"/>
            </div>
        </div>
    </div>
    <style>

        p.texto-servicio {
            font-size: 23px;
            font-weight: 100;
        }

        .cards-list {
            z-index: 0;
            width: 100%;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .card {
            margin: 30px auto !important;
            width: 300px;
            height: 300px;
            border-radius: 40px;
            box-shadow: 5px 5px 30px 7px rgba(0, 0, 0, 0.25), -5px -5px 30px 7px rgba(0, 0, 0, 0.22);
            cursor: pointer;
            transition: 0.4s;
        }

        .card .card_image {
            width: inherit;
            height: inherit;
            border-radius: 40px;
        }

        .card .card_image img {
            width: inherit;
            height: inherit;
            border-radius: 40px;
            object-fit: cover;
        }

        .card .card_title {
            text-align: center;
            border-radius: 0 0 40px 40px;
            font-family: sans-serif;
            font-weight: bold;
            font-size: 30px;
            margin-top: -80px;
            height: 40px;
        }

        .card:hover {
            transform: scale(0.9, 0.9);
            box-shadow: 5px 5px 30px 15px rgba(0, 0, 0, 0.25), -5px -5px 30px 15px rgba(0, 0, 0, 0.22);
        }

        .title-white {
            color: white;
        }

        .title-black {
            color: black;
        }

        @media all and(max-width: 500px) {
            .card-list {
                /* On small screens, we are no longer using row direction but column */
                flex-direction: column;
            }
        }
    </style>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $("#visado_card").click(function () {
            let nombre_cliente = $('#nombre_cliente').val()
            let apellidos_cliente = $('#apellidos_cliente').val()
            let correo_cliente = $('#correo_cliente').val()
            let direccion_cliente = $('#direccion_cliente').val()
            let telefono_cliente = $('#telefono_cliente').val()
            let id_cliente_cliente = $('#id_cliente_cliente').val()
            $('body').append(`
                    <form action='/turismo/visado'
                         method="post" id='form_turismo_visado'>
                        <input type='text' hidden name='nombre_cliente' value='${nombre_cliente}'/>
                        <input type='text' hidden name='apellidos_cliente' value='${apellidos_cliente}'/>
                        <input type='text' hidden name='correo_cliente' value='${correo_cliente}'/>
                        <input type='text' hidden name='direccion_cliente' value='${direccion_cliente}'/>
                        <input type='text' hidden name='telefono_cliente' value='${telefono_cliente}'/>
                        <input type='text' hidden name='id_cliente_cliente' value='${id_cliente_cliente}'/>
                    </form>`)
            const fomrulario = $('#form_turismo_visado')
            fomrulario.submit()
            fomrulario.remove()

        });

    </script>

{% endblock %}
