{% extends 'base.html.twig' %}
{% block content %}
	{% include 'breadcrumbs.html.twig' %}
	<!-- Classic Breadcrumbs-->

	<section class="section novi-background section-66 section-sm-bottom-110">
		
        <div class="container">
			<h1 class="text-reporte">Seleccionar Moneda
			</h1>
			<hr class="divider bg-mantis">

            <div class="row">
    <div class="col-sm">
    
    </div>
    <div class="col-sm">
     <form id="form-moneda" name='form-moneda' action="{{ path('home/moneda') }}" method="post">
				 <div class="form-group">
    <label style="color:white;" for="moneda">Moneda</label>
    <select name="moneda"   class="form-control" id="moneda">
     
     {% for data in moneda %}

    {% if data.id == userMonedaId %}
    <option selected value="{{data.id}}">{{data.nombre}}</option>
    {% else %}
    <option value="{{data.id}}">{{data.nombre}}</option>
    {% endif %}

    {% endfor %}
    </select>
      <div class=" row justify-content-md-center group offset-top-34">
    <button type="submit" class="btn btn-dark">Seleccionar</button>  </div>
  </div>
	
		</form>
    </div>
    <div class="col-sm">
     
    </div>
  </div>
			
	</div>
    </section>

{% endblock %}
