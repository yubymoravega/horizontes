 {% endblock %}

{% block javascripts %} 
{{parent()}}

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>

$( "#add" ).click(function() {
	 var split = window.location.pathname.split("/");

  window.location.href = "/remesas.add/"+split[2];
});

	function editarBeneficiario(id) {
		window.location.href = "/remesas.edit/"+id;
      };

	  function remesa(id,primerNombre,primerApellido,segundoApellido,telefono,
	  telefonoCasa,identificacion,alternativoNombre,alternativoApellido,alternativoSegundoApellido,
	  calle,no,entre,y,apto,edificio,reparto,provincia,municipio,idCliente) {

		    $("#primerNombre").text(primerNombre+' '+primerApellido+' '+primerApellido);
		    $("#telefono").text(telefono);
			$("#casa").text(telefonoCasa);
			$("#identificacion").text(identificacion);
			$("#alternativo").text(alternativoNombre+' '+alternativoApellido+' '+alternativoSegundoApellido );
		  	$("#calle").text(calle+" No."+no);
			$("#entre").text(entre);
			$("#y").text(y);
			$("#apto").text(apto);
			$("#edificio").text(edificio);
			$("#reparto").text(reparto);

		$.ajax({
            type: 'POST',
            data: {'provincia' : provincia,'municipio':municipio},
            url: window.location.protocol+"//"+location.hostname+":"+window.location.port+"/remesas.dialog",
            dataType: 'html',
            success: function (data) {
				data = JSON.parse(data);
				$("#provincia").text(data.provincia);
				$("#municipio").text(data.municipio);
            }
        });

			$( "#monto" ).change(function() {
				
				if($( "#monto" ).val() <= 100){
								
				if($("#provincia").text() == 'LA HABANA'){

					$( "#total" ).val(Number($( "#monto" ).val()) + Number(5));
				
					}else{ 
									
					$( "#total" ).val(Number($( "#monto" ).val()) + Number(8));
				
				}}else{ 
				
					if($("#provincia").text() == 'LA HABANA'){

					$( "#total" ).val(Number($( "#monto" ).val()) +(Number($( "#monto" ).val()) *0.05 ));
				
					}else{ 
									
					$( "#total" ).val(Number($( "#monto" ).val()) +(Number($( "#monto" ).val()) *0.08 ));

				}}

            });


			$( "#total" ).change(function() {

				if($( "#total" ).val() <= 100){
								
				if($("#provincia").text() == 'LA HABANA'){

					$( "#monto" ).val(Number($( "#total" ).val()) - Number(5));
				
					}else{ 
									
					$( "#monto" ).val(Number($( "#total" ).val()) - Number(8));
				
				}}else{ 
				
					if($("#provincia").text() == 'LA HABANA'){

					$( "#monto" ).val(Number($( "#total" ).val()) - (Number($( "#total" ).val()) *0.05 ));
				
					}else{ 
									
					$( "#monto" ).val(Number($( "#total" ).val()) - (Number($( "#total" ).val()) *0.08 ));

				}}

            });


		    $( "#dialog-monto" ).dialog({width: 500});
            $( "#dialdialog-monto" ).dialog( "open" );

			$( "#boton-enviar" ).click(function() {

				if($( "#total" ).val() > 0){

					let monto =	$( "#total" ).val();
					window.location.href = "/remesas.carrito/"+id+"/"+monto+"/"+idCliente;
				}else {

					 $("#mensaje-monto").text("Ingrese un Monto");
					  $("#mensaje-monto").css({"color": "red"});
				}
       });
           
		
      };

	 $('#monto').on('input', function () { 
    this.value = this.value.replace(/[^0-9]/g,'');
     });    

	  $('#total').on('input', function () { 
    this.value = this.value.replace(/[^0-9]/g,'');
     });  

	function eliminarBeneficiario(id, tel) {
	$("#dialog-confirm").dialog({
	resizable: false,
	height: "auto",
	width: 400,
	modal: true,
	buttons: {
	"Eliminar": function () {

	window.location.href = "/remesas.beneficiarios.delete/"+id+"/"+tel;
	},
	Cancel: function () {
	$(this).dialog("close");}}});};
</script>


{% endblock %}

