  <div class="form-row text-center">
  <div class="col-md-4 mb-3">
     
	  <input type="text" class="form-control" id="total" placeholder="A pagar">
      <input type="text" class="form-control" id="monto" placeholder="Recibir">

      <div id='mensaje-monto'>
       
      </div>
	  
    </div>
	 <div class="col-md-4 mb-3">
    <button id='boton-enviar' type="button" class="btn btn-dark">Agregar Al Carrito</button>
    </div>
	</div>
</div>

