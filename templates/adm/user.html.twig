{% extends 'base.html.twig' %}

{% block content %}
	{% set total = null %}
	{% include 'breadcrumbs.html.twig' %}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	<section class="section novi-background section-66 section-sm-bottom-110">
		<div class="container">
			<h1 class="text-reporte">Reporte de Usuarios
			</h1>
			<hr class="divider bg-mantis">
			 <button  type="button" data-toggle="modal" data-target="#agregarAgencia" class="btn btn-sm btn-outline-dark"   >Agregar Usuario</button>
		<!-- Bootstrap Table-->
		<div class="table-responsive clearfix">
			<table class="table table-striped tabla-reporte">
				<tbody>
					<tr>
                       <th>No</th>
						<th>User</th>
             <th>Roles</th>
              <th>Estatus</th>
              <th>Moneda</th>
              <th>Agencia</th>
                        <th>Acciones</th>
					</tr>
					{# table body #}
        {% for data in pagination %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
            <td> {{ data.id }}</td>     
            <td>{{ data.username}}</td>
              <td>
              {% for role in data.roles %}
    {{ role}} -
    {% endfor %}
              
              </td>
              <td>{{ data.status}}</td>
              <td>{{ data.idMoneda}}</td>
               <td>{{ data.idAgencia}}</td>
          
            <td><svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
