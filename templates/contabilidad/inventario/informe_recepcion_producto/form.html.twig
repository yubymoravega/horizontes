{% extends 'base.html.twig' %}
{% block content %}
    <div class="container d-flex justify-content-center">
        <div class="card mt-1" style="width: 50rem;">
            <div class="container">
                <div class="row mt-0 p-0">
                    <div class="col-8 form-group input-group input-group-sm d-block">
                        <h3 class="text-reporte text-right mr-0 text-white" id="normal_div" >
                            Informe de Recepción de Productos
                        </h3>
                    </div>
                    <div class="col-4 form-group input-group input-group-sm  mt-2 ml-0 p-0 d-block">
                        <span class="h5 text-light mr-2">Nro.</span><input type="number" id="select_nros" class="w-25">
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(formulario.nro_cuenta_acreedora, {'attr':{'id':'informe_recepcion_producto','autocomplete':"off"}}) }}
                <div class="row mt-0 p-0">
                    <div class="col-5 form-group input-group input-group-sm pa-2 d-block">
                        {{ form_label(formulario.nro_cuenta_acreedora) }}
                        {{ form_widget(formulario.nro_cuenta_acreedora) }}
                    </div>
                    <div class="col-5 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.nro_subcuenta_acreedora) }}
                        {{ form_widget(formulario.nro_subcuenta_acreedora) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm pr-0 d-block">
                        {{ form_label(formulario.documento.id_moneda) }}
                        {{ form_widget(formulario.documento.id_moneda) }}
                    </div>
                    <input type="hidden" id="__token" name="_token" value="{{ csrf_token('authenticate') }}">
                </div>
                {{ form_end(formulario.nro_cuenta_acreedora) }}
                <div class="d-flex align-items-center mt-3 pl-2">
                    <h3 class="text-light mr-auto" style="font-weight: 300;">Productos</h3>
                    <div class="px-2" style="background: dimgray; border-radius: .3rem;">
                        <span class="pr-1">Importe Total : </span>
                        <span id="importe-total">0</span>
                    </div>
                </div>
                <hr color="dimgray" class="my-1 ml-2" size=3>

                {{ form_start(formulario.mercancia, {'attr':{'id':'form_mercancia','autocomplete':"off"}}) }}


                <div id="expediente_row" class="row mt-0 p-0">
                    <div class="col-3 form-group input-group input-group-sm pa-2 d-block">
                        {{ form_label(formulario.codigo_exp) }}
                        {{ form_widget(formulario.codigo_exp) }}
                    </div>
                    <div class="col-9 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.descripcion_exp) }}
                        {{ form_widget(formulario.descripcion_exp) }}
                    </div>
                </div>

                <div id="orden_trabajo_row" class="row mt-0 p-0">
                    <div class="col-3 form-group input-group input-group-sm pa-2 d-block">
                        {{ form_label(formulario.id_centro_costo) }}
                        {{ form_widget(formulario.id_centro_costo) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.codigo_ot) }}
                        {{ form_widget(formulario.codigo_ot) }}
                    </div>
                    <div class="col-7 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.descripcion_ot) }}
                        {{ form_widget(formulario.descripcion_ot) }}
                    </div>
                </div>
                <div class="row mt-0 p-0" id="cuenta_subcuenta_select">
                    <div class="col-6 form-group input-group input-group-sm pa-2 d-block">
                        {{ form_label(formulario.mercancia.nro_cuenta_inventario) }}
                        {{ form_widget(formulario.mercancia.nro_cuenta_inventario) }}
                    </div>
                    <div class="col-6 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.mercancia.nro_subcuenta_inventario) }}
                        {{ form_widget(formulario.mercancia.nro_subcuenta_inventario) }}
                    </div>
                </div>
                <div class="row mt-0 p-0">
                    <div class="col-3 form-group input-group input-group-sm pa-1 d-block">
                        {{ form_label(formulario.mercancia.codigo) }}
                        <div class="row m-0 p-0">
                            <div class="col-8 p-0">
                                {{ form_widget(formulario.mercancia.codigo) }}
                            </div>
                            <div class="col-1 mt-0 p-0">
                                <button class="btn btn-secondary btn-sm" type="button"
                                        id="btnSearchMercancia"><i
                                            class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-7 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.mercancia.descripcion) }}
                        {{ form_widget(formulario.mercancia.descripcion) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block pr-0">
                        {{ form_label(formulario.mercancia.id_unidad_medida) }}
                        {{ form_widget(formulario.mercancia.id_unidad_medida) }}
                    </div>
                </div>
                <div class="row mt-0 p-0">
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.documento.cantidad_mercancia) }}
                        {{ form_widget(formulario.documento.cantidad_mercancia,{'type':'number'}) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.mercancia.precio) }}
                        {{ form_widget(formulario.mercancia.precio) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.documento.importe_mercancia) }}
                        {{ form_widget(formulario.documento.importe_mercancia,{'type':'number'}) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.mercancia.existencia) }}
                        {{ form_widget(formulario.mercancia.existencia) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.mercancia.existencia_incremento) }}
                        {{ form_widget(formulario.mercancia.existencia_incremento) }}
                    </div>
                    {{ form_end(formulario.mercancia) }}

                    <div class="col-2 pt-2 pl-1 mt-4">
                        <button class="btn btn-secondary btn-sm ml-4" type="button" id="btnAplicarMercancia">ADICIONAR
                        </button>
                    </div>
                </div>
                <div>
                    <table class="table-small-rows table table-hover text-light" id="pp">
                        <thead class="thead-dark">
                        <th width="120px">Cod.</th>
                        <th width="110px">Cant.</th>
                        <th width="110px">Importe</th>
                        <th width="110px">Precio</th>
                        <th width="120px">Nueva Exist</th>
                        <th width="90px">Cuenta/Sub.</th>
                        <th width="60px"><i class="fa fa-minus-circle text-danger"></i></th>
                        <th scope="col-1" hidden>UM</th>
                        <th scope="col-1" hidden>Descripcion</th>
                        </thead>
                        <tbody id="rows_mercancias">
                        </tbody>
                    </table>
                </div>
                <div class="d-flex mt-2">
                    <div class="mr-auto">
                        <a href="{{ url('inventario') }}"
                           class="btn btn-outline-secondary">Salir</a>
                    </div>
                    <div class="ml-2">
                        <button class='my-0 btn btn-secondary' id="btnCancelar" onclick="myOnDeleteConfirm()">
                            cancelar
                        </button>
                    </div>
                    <div class="ml-2">
                        <button class='my-0 btn btn-secondary' id="btnImprimir" onclick="Print_Informe_Productos()">
                            imprimir
                        </button>
                    </div>
                    <div class="ml-2">
                        <button class='my-0 btn btn-secondary' id="btnSubbmitInforme">contabilizar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#orden_trabajo_row').hide()
        $('#expediente_row').hide()
        let mercancias_seleccionada = [];
        let productos = [];
        let eliminados = [];
        let consecutivo = 0;
        let cuentas_inventarios = [];
        let cuentas_acreedoras = [];
        let list_mercancia = []
        let importe_total = 0;
        let flag = false;

        function Print_Informe_Productos() {
            if ($('#select_nros').val() == consecutivo) {
                if (list_mercancia.length > 0) {

                    const mercancia_json = JSON.stringify(list_mercancia)
                    $('body').append(`
                    <form action='/contabilidad/inventario/informe-recepcion-productos/print_report_current/'
                         method="post" id='form_print_current' target='_blank'>
                        <input type='text' hidden name='datos[importe_total]' value='${importe_total}'/>
                        <input type='hidden' name='productos' value='${mercancia_json}'/>
                        <input type='text' hidden name='nro' value="${consecutivo}" />
                    </form>`)

                    const fomrulario = $('#form_print_current')
                    fomrulario.submit()
                    fomrulario.remove()
                } else
                    alertTemplate('No excisten productos para imprimir', 'danger')
            } else {
                let url = '/contabilidad/inventario/informe-recepcion-productos/print-report/' + $('#select_nros').val()
                window.open(url, 'blank_')
            }
        }

        $('select').prepend('<option selected = "false" value = "0" disabled> -- seleccione -- </option>');
        loadingModal.show()

        $(document).ready(function () {
            cargarDatosIniciales()

            $("#select_nros").blur(function () {
                if (flag == false) {
                    resetFormulario()
                } else {
                    flag = false;
                }
            });

            $('#select_nros').on('keyup', function (e) {
                if (e.which == 13) {
                    flag = true
                    if (eliminados.includes($('#select_nros').val())) {
                        $('#btnSubbmitInforme').hide()
                        $('#btnImprimir').hide()
                        $('#btnCancelar').hide()
                        resetFormulario()
                        alertTemplate('El informe solicitado se encuentra cancelado', 'danger')
                    } else {
                        if ($('#select_nros').val() == consecutivo) {
                            $('#btnSubbmitInforme').show()
                            $('#btnImprimir').show()
                            $('#btnCancelar').hide()
                            resetFormulario()
                        } else if ($('#select_nros').val() > consecutivo) {
                            $('#btnSubbmitInforme').hide()
                            $('#btnImprimir').hide()
                            $('#btnCancelar').hide()
                            resetFormulario()
                            alertTemplate('El mayor número permitido es ' + consecutivo, 'danger')
                        } else if ($('#select_nros').val() == '') {
                            $('#btnSubbmitInforme').hide()
                            $('#btnImprimir').hide()
                            $('#btnCancelar').hide()
                            resetFormulario()
                            alertTemplate('Debe introducir el número del documento a vizualizar.', 'danger')
                        } else {
                            $('#btnImprimir').show()
                            $('#btnSubbmitInforme').hide()
                            $('#form_mercancia').css('display', 'none')
                            $('#btnCancelar').show()
                            llenarFormulario($('#select_nros').val())
                        }
                    }
                }
            })

            $('#btnSearchMercancia').on('click', function () {
                let codigo = $('#informe_recepcion_producto_mercancia_codigo').val()
                if (codigo != '') {
                    getDataMercancia(codigo)
                } else {
                    alertTemplate('El campo código es obligatorio.', 'danger')
                }
            })

            $('#informe_recepcion_producto_mercancia_codigo').on('keyup', function (e) {
                if (e.which == 13) {
                    let codigo = $('#informe_recepcion_producto_mercancia_codigo').val()
                    if (codigo != '') {
                        getDataMercancia(codigo)
                    } else {
                        alertTemplate('El campo código es obligatorio.', 'danger')
                    }
                } else {
                    $('#informe_recepcion_producto_mercancia_descripcion').val('')
                    $('#informe_recepcion_producto_mercancia_descripcion').attr('readonly', true)
                    $('#informe_recepcion_producto_mercancia_id_unidad_medida').val(0)
                    $('#informe_recepcion_producto_mercancia_id_unidad_medida').addClass('read-only-select');

                    $('#informe_recepcion_producto_mercancia_nro_cuenta_inventario').val(0)
                    $('#informe_recepcion_producto_mercancia_nro_cuenta_inventario').addClass('read-only-select');

                    $('#informe_recepcion_producto_mercancia_nro_subcuenta_inventario').val(0)
                    $('#informe_recepcion_producto_mercancia_nro_subcuenta_inventario').addClass('read-only-select');

                    $('#informe_recepcion_producto_mercancia_precio').val('')
                    $('#informe_recepcion_producto_mercancia_existencia').val('')
                }
            })

            $('#informe_recepcion_producto_codigo_exp').on('keyup', function (e) {
                if (e.which == 13) {
                    let codigo = $('#informe_recepcion_producto_codigo_exp').val()
                    if (codigo != '') {
                        getDataExpediente(codigo)
                    } else {
                        alertTemplate('El campo código es obligatorio.', 'danger')
                    }
                } else {
                    $('#informe_recepcion_producto_descripcion_exp').val('')
                    $('#informe_recepcion_producto_descripcion_exp').attr('readonly', true)
                }
            })

            $('#informe_recepcion_producto_codigo_ot').on('keyup', function (e) {
                if (e.which == 13) {
                    let codigo = $('#informe_recepcion_producto_codigo_ot').val()
                    if (!!codigo) {
                        getDataOT(codigo)
                    } else {
                        alertTemplate('El campo código no deben estar vacio.', 'danger')
                    }
                } else {
                    $('#informe_recepcion_producto_descripcion_ot').val('')
                    $('#informe_recepcion_producto_descripcion_ot').attr('readonly', true)
                }
            })


            $('#informe_recepcion_producto_documento_importe_mercancia').on('keyup', function () {
                let importe = parseFloat($('#informe_recepcion_producto_documento_importe_mercancia').val())
                let cantidad = parseFloat($('#informe_recepcion_producto_documento_cantidad_mercancia').val())
                if (importe > 0) {
                    let precio_final = parseFloat(importe / cantidad).toFixed(5)
                    $('#informe_recepcion_producto_mercancia_precio').val(precio_final)
                } else {
                    $('#informe_recepcion_producto_mercancia_precio').val(0)
                }
            })

            $('#informe_recepcion_producto_documento_cantidad_mercancia').on('keyup', function () {
                let importe = parseFloat($('#informe_recepcion_producto_documento_importe_mercancia').val())
                let cantidad = parseFloat($('#informe_recepcion_producto_documento_cantidad_mercancia').val())
                if (importe > 0) {
                    let precio_final = parseFloat(importe / cantidad).toFixed(5)
                    $('#informe_recepcion_producto_mercancia_precio').val(precio_final)
                } else {
                    $('#informe_recepcion_producto_mercancia_precio').val(0)
                }
                let existencia_inicial = (parseFloat($('#informe_recepcion_producto_mercancia_existencia').val()) > 0 || $('#informe_recepcion_producto_mercancia_existencia').val() != '') ? parseFloat($('#informe_recepcion_producto_mercancia_existencia').val()) : 0
                $('#informe_recepcion_producto_mercancia_existencia_incremento').val(existencia_inicial + parseFloat($('#informe_recepcion_producto_documento_cantidad_mercancia').val()))
            })

            $('#informe_recepcion_producto_mercancia_nro_cuenta_inventario').on('change', function () {
                $('#informe_recepcion_producto_mercancia_nro_subcuenta_inventario').find('option').remove()
                cuentas_inventarios.forEach(function (valor, pos) {
                    if ($('#informe_recepcion_producto_mercancia_nro_cuenta_inventario').val() == valor.nro_cuenta) {
                        for (var i = 0; i < valor.sub_cuenta.length; i++) {
                            $('#informe_recepcion_producto_mercancia_nro_subcuenta_inventario').append('<option value = "' + valor.sub_cuenta[i]['nro_subcuenta'] + '">' + valor.sub_cuenta[i]['nro_subcuenta'] + '</option>');
                        }
                    }
                })
            })
            $('#informe_recepcion_producto_nro_cuenta_acreedora').on('change', function () {
                $('#informe_recepcion_producto_nro_subcuenta_acreedora').find('option').remove()
                $('#informe_recepcion_producto_nro_subcuenta_acreedora').prepend('<option selected = "false" value = "0" disabled> -- seleccione -- </option>');
                cuentas_acreedoras.forEach(function (valor, pos) {
                    if ($('#informe_recepcion_producto_nro_cuenta_acreedora').val() == valor.nro_cuenta) {
                        for (var i = 0; i < valor.sub_cuenta.length; i++) {
                            console.info(valor)
                            $('#informe_recepcion_producto_nro_subcuenta_acreedora').append('<option value = "' + valor.sub_cuenta[i]['nro_subcuenta'] + '">' + valor.sub_cuenta[i]['nro_subcuenta'] + '</option>');
                        }
                    }
                })
            })

            /**Evento de cargar dinamicamente los campor por los criterios de analisis de las subcuentas*/
            $('#informe_recepcion_producto_nro_subcuenta_acreedora').on('change', function () {
                limpiarcampos()
                miniLoadin.show({msg: 'Cargando otros campos...', target: '#informe_recepcion_producto'})
                // cargar dinamicamente [OT]
                $('#orden_trabajo_row').hide()
                $('#informe_recepcion_producto_mercancia_descripcion_ot').attr('readonly', true)
                let nro_cuenta = $('#informe_recepcion_producto_nro_cuenta_acreedora').val().split(' - ')
                let nro_subcuenta = $(this).val().split(' - ')
                let data = nro_cuenta[0]+'-'+nro_subcuenta[0]
                $.ajax({
                    url: '/contabilidad/inventario/informe-recepcion-productos/dinamic-files/' + data,
                    method: 'POST',
                    success: function (result) {
                        if (result.success) {

                            $('#informe_recepcion_producto_mercancia_codigo_ot').val(null)
                            $('#informe_recepcion_producto_mercancia_descripcion_ot').val(null)
                            console.info(result.data)
                            result.data.forEach(data => {
                                if (data == 'OT') {
                                    $('#expediente_row').hide()
                                    $('#orden_trabajo_row').show()
                                }
                                else if (data == 'EXP'){
                                    $('#expediente_row').show()
                                    $('#orden_trabajo_row').hide()
                                }
                            })
                        } else {
                            alertTemplate(result.message, 'danger')
                        }
                        miniLoadin.close()
                    },
                    error: function () {
                    }
                })
            })
            /**Fin evento***/
            const form_informe_recepcion = $('#informe_recepcion_producto')

            form_informe_recepcion.validate({
                errorClass: 'invalid-label-orange',
                errorPlacement: function (error, element) {
                    error.attr('style', 'font-size: .8rem;')
                    error.insertAfter(element);
                },
                rules: {
                    'informe_recepcion_producto[nro_cuenta_acreedora]': "required",
                    'informe_recepcion_producto[documento][id_moneda]': "required",
                },
                messages: {
                    'informe_recepcion_producto[nro_cuenta_acreedora]': CONTAB_MSG.REQUIRED_OBLIGATORIO,
                    'informe_recepcion_producto[documento][id_moneda]': CONTAB_MSG.REQUIRED_OBLIGATORIO,
                }
            })

            const form_mercancia = $('#form_mercancia')
            form_mercancia.validate({
                errorClass: 'invalid-label-orange',
                errorPlacement: function (error, element) {
                    error.attr('style', 'font-size: .8rem;')
                    error.insertAfter(element);
                },
                rules: {
                    'informe_recepcion_producto[mercancia][codigo]': "required",
                    'informe_recepcion_producto[mercancia][descripcion]': "required",
                    'informe_recepcion_producto[mercancia][id_unidad_medida]': "required",
                    'informe_recepcion_producto[documento][cantidad_mercancia]': "required",
                    'informe_recepcion_producto[documento][importe_mercancia]': "required",
                    'informe_recepcion_producto[mercancia][nro_cuenta_inventario]': "required",
                    'informe_recepcion_producto[mercancia][nro_subcuenta_inventario]': "required",
                    'informe_recepcion_producto[descripcion_exp]': "required",
                    'informe_recepcion_producto[codigo_exp]': "required",
                    'informe_recepcion_producto[id_centro_costo]': "required",
                    'informe_recepcion_producto[codigo_ot]': "required",
                    'informe_recepcion_producto[descripcion_ot]': "required",
                },
                messages: {
                    'informe_recepcion_producto[mercancia][codigo]': 'Obligatorio!',
                    'informe_recepcion_producto[mercancia][descripcion]': CONTAB_MSG.REQUIRED_OBLIGATORIO,
                    'informe_recepcion_producto[mercancia][id_unidad_medida]': 'Obligatorio!',
                    'informe_recepcion_producto[documento][cantidad_mercancia]': 'Obligatorio!',
                    'informe_recepcion_producto[documento][importe_mercancia]': 'Obligatorio!',
                    'informe_recepcion_producto[mercancia][nro_cuenta_inventario]': 'Obligatorio!',
                    'informe_recepcion_producto[mercancia][nro_subcuenta_inventario]': 'Obligatorio!',
                    'informe_recepcion_producto[descripcion_exp]': "Obligatorio!",
                    'informe_recepcion_producto[codigo_exp]': "Obligatorio!",
                    'informe_recepcion_producto[id_centro_costo]': "Obligatorio!",
                    'informe_recepcion_producto[codigo_ot]': "Obligatorio!",
                    'informe_recepcion_producto[descripcion_ot]': "Obligatorio!",
                }
            })

            $("#btnSubbmitInforme").click(function (e) {
                if (form_informe_recepcion.valid()) {
                    if (list_mercancia.length) {
                        let data = form_informe_recepcion.serializeArray()
                        data.push({
                            name: 'informe_recepcion_producto[list_mercancia]',
                            value: JSON.stringify(list_mercancia)
                        })
                        loadingModal.show()
                        $.ajax({
                            url: '/contabilidad/inventario/informe-recepcion-productos/form-add',
                            method: 'POST',
                            data: data,
                            dataType: 'json',
                            success: function (result) {
                                if (result.success) {
                                    window.location.replace('{{ path('contabilidad_inventario_informe_recepcion_producto_gestionar') }}')
                                } else {
                                    alertTemplate(result.msg)
                                }
                                loadingModal.close()
                            },
                            error: function () {
                            }
                        })
                    } else {
                        alertTemplate('El Informe de Recepción debe contener algunas productos', 'danger')
                    }
                }
            });

            $('#btnAplicarMercancia').on('click', function () {
                if (form_mercancia.valid()) {
                    let codigo = $('#informe_recepcion_producto_mercancia_codigo').val()
                    let cant = $('#informe_recepcion_producto_documento_cantidad_mercancia').val()
                    let importe = $('#informe_recepcion_producto_documento_importe_mercancia').val()
