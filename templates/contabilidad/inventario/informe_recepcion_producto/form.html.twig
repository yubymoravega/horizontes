                                ActiveDesactive(false)
                            }
                            else{
                                ActiveDesactive(true)
                            }
                            $('#rows_mercancias').find('tr').remove();
                            $('#informe_recepcion_producto_nro_cuenta_acreedora').prepend('<option selected value = ' + informe.nro_cuenta_acreedora + '>' + informe.nro_cuenta_acreedora + '</option>');
                            $('#informe_recepcion_producto_documento_id_moneda').prepend('<option selected value = ' + informe.moneda + '>' + informe.moneda + '</option>');
                            $('#informe_recepcion_codigo_factura').val(informe.codigo_factura);
                            $('#informe_recepcion_producto_nro_subcuenta_acreedora').prepend('<option selected value = ' + informe.nro_subcuenta_acreedora + '>' + informe.nro_subcuenta_acreedora + '</option>');
                            let productos = informe.productos
                            $("#importe-total").text('$' + parseFloat(informe.importe_total).toFixed(2))
                            for (var i = 0; i < productos.length; i++) {
                                $('#rows_mercancias').append(`<tr>
                                    <td style="font-weight:400;"> ${productos[i]['codigo']} </td>
                                    <td style="font-weight:400;" class="text-right"> ${productos[i]['cantidad']}</td>
                                    <td style="font-weight:400;" class="text-right"> ${parseFloat(productos[i]['importe']).toFixed(2)}</td>
                                    <td style="font-weight:400;" class="text-right"> ${parseFloat(productos[i]['precio']).toFixed(6)} </td>
                                    <td style="font-weight:400;" class="text-right">${parseFloat(productos[i]['existencia'])}</td>
                                    <td style="font-weight:400;">${productos[i]['cuenta_subcuenta']}</td>
                                    <td></td>
                                   </tr>`
                                );
                            }
                            loadingModal.close()
                        }
                        if (result[0].success == false) {
                            loadingModal.close()
                            alertTemplate(result.msg, 'danger')
                        }
                    },
                    error: function (result) {
                    }
                })
            }
        }

        function cargarDatosIniciales() {
            $('#btnCancelar').hide()
            $('#informe_recepcion_fecha_factura').attr('type', 'date')
            $.ajax({
                url: '/contabilidad/inventario/informe-recepcion-productos/getCuentas',
                method: 'POST',
                dataType: 'json',
                success: function (result) {
                    cuentas_inventarios = result.cuentas_inventario
                    cuentas_acreedoras = result.cuentas_acrredoras
                    $('#informe_recepcion_producto_mercancia_nro_subcuenta_inventario').find('option').remove()
                    $('#informe_recepcion_producto_id_centro_costo').find('option').remove()
                    $('#informe_recepcion_producto_mercancia_nro_subcuenta_inventario').prepend('<option selected = "false" value = "0" disabled> -- seleccione -- </option>');

                    $(result.cuentas_inventario).each(function (pos, valor) {
                        $('#informe_recepcion_producto_mercancia_nro_cuenta_inventario').append('<option value = "' + valor.nro_cuenta + '">' + valor.nro_cuenta + '</option>');
                    })
                    $(result.cuentas_acrredoras).each(function (pos, valor) {
                        $('#informe_recepcion_producto_nro_cuenta_acreedora').append('<option value = "' + valor.nro_cuenta + '">' + valor.nro_cuenta + '</option>');
                    })
                    $(result.monedas).each(function (pos, valor) {
                        $('#informe_recepcion_producto_documento_id_moneda').append('<option value = "' + valor.id + '">' + valor.nombre + '</option>');
                    })
                    $(result.centro_costo).each(function (pos, valor) {
                        $('#informe_recepcion_producto_id_centro_costo').append('<option value = "' + valor.id + '">' + valor.nombre + '</option>');
                    })
                    loadingModal.close()
                },
                error: function () {
                    loadingModal.close()
                }
            })

            $.ajax({
                url: '/contabilidad/inventario/informe-recepcion-productos/get-nros-informes',
                method: 'POST',
                dataType: 'json',
                success: function (result) {
                    consecutivo = result.nros
