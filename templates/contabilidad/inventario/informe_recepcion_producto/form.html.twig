                    $('#select_nros').val(consecutivo)
                    $('#select_nros').prop('max', consecutivo)
                    $('#select_nros').prop('min', 1)
                    $('#normal_div').text('Informe de Recepción de Productos')
                    $('#normal_div').attr('class','text-reporte text-right mr-0 text-white mt-2')
                    loadingModal.close()
                },
                error: function () {
                }
            })
        }

