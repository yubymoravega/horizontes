        function llenarFormulario(nro_informe) {
            if(nro_informe<1){
                alertTemplate('El menor número permitido es 1', 'danger')
                resetFormulario()
            }
            else{
                $.ajax({
                    url: '/contabilidad/inventario/informe-recepcion-productos/getInforme/' + nro_informe,
                    method: 'POST',
                    dataType: 'json',
                    success: function (result) {
                        if (result[0].success) {
                            let informe = result[0].informe;
                            let ids = ['_nro_cuenta_inventario', '_nro_subcuenta_inventario', '_nro_cuenta_acreedora', '_nro_subcuenta_acreedora', '_documento_id_moneda']
                            for (let i = 0; i < ids.length; i++) {
                                $("#informe_recepcion_producto" + ids[i]).find('option').remove()
                            }
                            $('#rows_mercancias').find('tr').remove();
                            $('#informe_recepcion_producto_nro_cuenta_inventario').prepend('<option selected value = ' + informe.nro_cuenta_inventario + '>' + informe.nro_cuenta_inventario + '</option>');
                            $('#informe_recepcion_producto_nro_subcuenta_inventario').prepend('<option selected value = ' + informe.nro_subcuenta_inventario + '>' + informe.nro_subcuenta_inventario + '</option>');
                            $('#informe_recepcion_producto_nro_cuenta_acreedora').prepend('<option selected value = ' + informe.nro_cuenta_acreedora + '>' + informe.nro_cuenta_acreedora + '</option>');
                            $('#informe_recepcion_producto_nro_subcuenta_acreedora').prepend('<option selected value = ' + informe.nro_subcuenta_acreedora + '>' + informe.nro_subcuenta_acreedora + '</option>');
                            $('#informe_recepcion_producto_documento_id_moneda').prepend('<option selected value = ' + informe.moneda + '>' + informe.moneda + '</option>');

                            let productos = informe.productos
                            $("#importe-total").text('$' + parseFloat(informe.importe_total).toFixed(2))
                            for (var i = 0; i < productos.length; i++) {
                                $('#rows_mercancias').append(`<tr>
                                    <td style="font-weight:400;"> ${productos[i]['codigo']} </td>
                                    <td style="font-weight:400;"> ${productos[i]['cantidad']}</td>
                                    <td style="font-weight:400;"> ${productos[i]['importe']}</td>
                                    <td style="font-weight:400;"> ${productos[i]['precio']} </td>
                                    <td style="font-weight:400;">${productos[i]['existencia']}</td>
                                    <td></td>
                                   </tr>`
                                );
                            }
                            loadingModal.close()
                        } else {
                            loadingModal.close()
                            alertTemplate(result.msg, 'danger')
                        }
                    },
                    error: function (result) {
                        console.info('asasas')
                    }
                })
            }
        }

        function cargarDatosIniciales() {
            $('#btnCancelar').hide()
            $.ajax({
                url: '/contabilidad/inventario/informe-recepcion-productos/getCuentas',
                method: 'POST',
                dataType: 'json',
                success: function (result) {
                    cuentas_inventarios = result.cuentas_inventario
                    $(result.cuentas_inventario).each(function (pos, valor) {
                        $('#informe_recepcion_producto_nro_cuenta_inventario').append('<option value = "' + valor.nro_cuenta + '">' + valor.nro_cuenta + '</option>');
                    })
                    $(result.cuentas_acrredoras).each(function (pos, valor) {
                        $('#informe_recepcion_producto_nro_cuenta_acreedora').append('<option value = "' + valor.nro_cuenta + '">' + valor.nro_cuenta + '</option>');
                    })
                    $(result.monedas).each(function (pos, valor) {
                        $('#informe_recepcion_producto_documento_id_moneda').append('<option value = "' + valor.id + '">' + valor.nombre + '</option>');
                    })
                    loadingModal.close()
                },
                error: function () {
                }
            })
            $.ajax({
                url: '/contabilidad/inventario/informe-recepcion-productos/get-nros-informes',
                method: 'POST',
                dataType: 'json',
                success: function (result) {
                    consecutivo = result.nros
                    eliminados = result.eliminados
                    $('#select_nros').val(consecutivo)
                    $('#select_nros').prop('max', consecutivo)
                    $('#select_nros').prop('min', 1)
                    loadingModal.close()
                },
                error: function () {
                }
            })
        }

