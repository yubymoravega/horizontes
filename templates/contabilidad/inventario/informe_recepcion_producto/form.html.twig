        function resetFormulario() {
            loadingModal.show()
            $('#btnCancelar').hide()
            $('#informe_recepcion_fecha_factura').attr('type', 'date')
            $('#form_mercancia').css('display', 'block')
            $('#informe_recepcion_producto')[0].reset()
            $('#form_mercancia')[0].reset()
            let ids = ['_nro_cuenta_inventario', '_nro_subcuenta_inventario', '_nro_cuenta_acreedora', '_nro_subcuenta_acreedora', '_documento_id_moneda']
            for (let i = 0; i < ids.length; i++) {
                $("#informe_recepcion_producto" + ids[i]).find('option').remove()
