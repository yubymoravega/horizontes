                    let um = $('#informe_recepcion_producto_mercancia_id_unidad_medida').val()
                    let descripcion = $('#informe_recepcion_producto_mercancia_descripcion').val()
                    let cuenta = $('#informe_recepcion_producto_mercancia_nro_cuenta_inventario').val()
                    let subcuenta = $('#informe_recepcion_producto_mercancia_nro_subcuenta_inventario').val()

                    let codigo_exp = $('#informe_recepcion_producto_codigo_exp').val()
                    let descripcion_exp = $('#informe_recepcion_producto_descripcion_exp').val()
