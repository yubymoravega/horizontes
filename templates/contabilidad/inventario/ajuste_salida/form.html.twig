{% extends 'base.html.twig' %}
{% block content %}
    {# Modal de Cuentas#}
    <div class="modal fade" id="listarMercanciasModal" tabindex="-1" role="dialog" data-backdrop="static"
         data-keyboard="false"
         aria-labelledby="listarMercanciasModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="max-width: 850px;" role="document">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h4 class="modal-title text-light" id="listarMercanciasModalLabel">Listado de mercancias</h4>
                    <button class="close text-light" type="button" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-dark-app" style="height: 600px;">
                    <div style="height: 500px; overflow-y: auto;">
                        <table class="table-small-rows table table-hover text-light">
                            <thead class="thead-dark">
                            <th style="width: 10px">Sel.</th>
                            <th style="width: 160px">Código</th>
                            <th scope="col-6">Descripción</th>
                            <th style="width: 200px">Precio Compra</th>
                            </thead>
                            <tbody id="rows_table">
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex mt-4">
                        <div class="mr-auto">
                            <button class="btn btn-outline-secondary" type="button" data-dismiss="modal"
                                    aria-label="Cerrar">
                                <span aria-hidden="true">Cancelar</span>
                            </button>
                        </div>
                        <div class="ml-2">
                            <button type="button" class="my-0 btn btn-secondary" id="btnAceptar"
                                    onclick="SeleccionarMercancia()"
                                    data-dismiss="modal">Seleccionar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center">
        <div class="card mt-1" style="width: 50rem;">
            <div class="container">
                <div class="row mt-0 p-0">
                    <div class="col-8 form-group input-group input-group-sm d-block">
                        <h1 class="text-reporte text-right mr-0">Ajuste de Salida </h1>
                    </div>
                    <div class="col-4 form-group input-group input-group-sm mt-3 ml-0 p-0 d-block">
                        <span class="h5 text-light mr-2">Nro.</span><input type="number" id="select_nros" class="w-25">
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(formulario.nro_cuenta_deudora, {'attr':{'id':'ajuste_salida'}}) }}
                <div class="row mt-0 p-0">
                    <div class="col-6 pr-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.nro_cuenta_deudora) }}
                        {{ form_widget(formulario.nro_cuenta_deudora) }}
                    </div>
                    <div class="col-6 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.nro_subcuenta_deudora) }}
                        {{ form_widget(formulario.nro_subcuenta_deudora) }}
                    </div>
                    <input type="hidden" id="__token" name="_token" value="{{ csrf_token('authenticate') }}">
                </div>
                <div class="row mt-0 p-0">
                    <div class="col-8 mt-0 form-group input-group input-group-sm pl-3 pr-0 d-block">
                        {{ form_label(formulario.observacion) }}
                        {{ form_widget(formulario.observacion) }}
                    </div>
                    <div class="col-4 mt-0 form-group input-group input-group-sm pa-2 d-block">
                        {{ form_label(formulario.documento.id_moneda) }}
                        {{ form_widget(formulario.documento.id_moneda) }}
                    </div>
                </div>

                {{ form_end(formulario.nro_cuenta_deudora) }}

                <div class="d-flex align-items-center mt-3 pl-2">
                    <h3 class="text-light mr-auto" style="font-weight: 300;">Mercancias</h3>
                    <div class="px-2" style="background: dimgray; border-radius: .3rem;">
                        <span class="pr-1">Importe Total : </span>
                        <span id="importe-total">0</span>
                    </div>
                </div>
                <hr color="dimgray" class="my-1 ml-2" size=3>

                {{ form_start(formulario.mercancia, {'attr':{'id':'form_mercancia'}}) }}
                <div class="row mt-0 p-0">
                    <div class="col-3 form-group input-group input-group-sm pa-1 d-block">
                        {{ form_label(formulario.mercancia.codigo) }}
                        <div class="row m-0 p-0">
                            <div class="col-8 p-0">
                                {{ form_widget(formulario.mercancia.codigo) }}
                            </div>
                            <div class="col-1 mt-0 p-0">
                                <button class="btn btn-secondary btn-sm" data-toggle="modal" type="button"
                                        data-target="#listarMercanciasModal" id="btnSearchMercancia"><i
                                            class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-7 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.mercancia.descripcion) }}
                        {{ form_widget(formulario.mercancia.descripcion) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block pr-0">
                        {{ form_label(formulario.mercancia.id_unidad_medida) }}
                        {{ form_widget(formulario.mercancia.id_unidad_medida) }}
                    </div>
                </div>
                <div class="row mt-0 p-0">
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.documento.cantidad_mercancia) }}
                        {{ form_widget(formulario.documento.cantidad_mercancia,{'type':'number'}) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.documento.importe_mercancia) }}
                        {{ form_widget(formulario.documento.importe_mercancia,{'type':'number', 'disabled': true}) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.mercancia.precio) }}
                        {{ form_widget(formulario.mercancia.precio) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.mercancia.existencia) }}
                        {{ form_widget(formulario.mercancia.existencia) }}
                    </div>
                    <div class="col-2 mt-0 form-group input-group input-group-sm d-block p-0">
                        {{ form_label(formulario.mercancia.existencia_decremento) }}
                        {{ form_widget(formulario.mercancia.existencia_decremento) }}
                    </div>
                </div>
                <div class="row mt-0 p-0">
                    <div class="col-5 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.id_centro_costo) }}
                        {{ form_widget(formulario.id_centro_costo) }}
                    </div>
                    <div class="col-5 mt-0 form-group input-group input-group-sm d-block">
                        {{ form_label(formulario.id_elemento_gasto) }}
                        {{ form_widget(formulario.id_elemento_gasto) }}
                    </div>
                    <div class="col-2 pt-2 pl-1 mt-4">
                        <button class="btn btn-secondary btn-sm ml-4" type="button" id="btnAplicarMercancia">
                            ADICIONAR
                        </button>
                    </div>
                </div>
                {{ form_end(formulario.mercancia) }}
            </div>
            <div>
                <table class="table-small-rows table table-hover text-light">
                    <thead class="thead-dark">
                    <th width="120px">Cod.</th>
                    <th width="110px">Cant.</th>
                    <th width="110px">Importe</th>
                    <th width="110px">Precio</th>
                    <th scope="col-1">Nueva Exist</th>
                    <th width="60px"><i class="fa fa-minus-circle text-danger"></i></th>
                    <th scope="col-1" hidden>UM</th>
                    <th scope="col-1" hidden>Descripcion</th>
                    </thead>
                    <tbody id="rows_mercancias">
                    </tbody>
                </table>
            </div>
            <div class="d-flex mt-2">
                <div class="mr-auto">
                    <a href="{{ url('inventario') }}"
                       class="btn btn-outline-secondary" id="btn_salir">Salir</a>
                </div>
                <div class="ml-2">
                    <button class='my-0 btn btn-secondary' id="btnCancelar" onclick="cancelar()">cancelar</button>
                </div>
                <div class="ml-2">
                    <button class='my-0 btn btn-secondary' id="btnImprimir" onclick="Print_Ajuste()">imprimir
                    </button>
                </div>
                <div class="ml-2">
                    <button class='my-0 btn btn-secondary' id="btnSubbmitAjuste">contabilizar</button>
                </div>
            </div>

        </div>
    </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function Print_Ajuste() {
            const url = '/contabilidad/inventario/ajuste-salida/print_report/' + $('#select_nros').val()
            window.open(url, 'blank_')
        }

        function cancelar() {
            const url = '/contabilidad/inventario/ajuste-salida/delete/' + $('#select_nros').val()
            onDeleteConfirm({
                message: 'Está seguro que desea cancelar el Ajuste de entrada?',
                url
            })
        }

        let mercancias_seleccionada = [];
        let mercancias = [];
        let consecutivo = 0;
        let cuentas_deudoras = [];
        let cuentas_acreedoras = [];
        loadingModal.show()

        $(document).ready(function () {
            /** Ajax para obtener los nros consecutivos**/
            $.ajax({
                url: '/contabilidad/inventario/ajuste-salida/get-nros-ajustes',
                method: 'POST',
                dataType: 'json',
                success: function (result) {
                    consecutivo = result.nros
                    $('#select_nros').val(consecutivo)
                    $('#select_nros').prop('max', consecutivo)
                    $('#select_nros').prop('min', 1)
                    loadingModal.close()
                },
                error: function () {
                }
            })

            /** Evento para activar/desactivar los btn de CONTABILIZAR o IMPRIMIR**/
            $('#select_nros').on('change', function () {
                if ($('#select_nros').val() == consecutivo) {
                    $('#btnSubbmitAjuste').show()
                } else {
                    $('#btnSubbmitAjuste').hide()
                }
            })
            $('#select_nros').on('keyup', function (event) {
                if (event.which == 13) {
                    $('#ajuste_salida').resetForm()
                    $('#form_mercancia').resetForm()
                    $("#importe-total").text('$ 0.00')
                    $('#rows_mercancias').find('tr').remove()

                    if ($('#select_nros').val() == consecutivo) {// si es el consecutivo
                        $('#btnSubbmitAjuste').show()
                        $('#btnImprimir').show()
                        $('#btnCancelar').hide()
                        loadingData()
                    } else if ($('#select_nros').val() > consecutivo) {// si es mayor
                        $('#btnSubbmitAjuste').hide()
                        $('#btnImprimir').hide()
                        $('#btnCancelar').hide()
                        $('#ajuste_salida select').find('option').remove()
                        alertTemplate('El mayor número permitido es ' + consecutivo, 'danger')
                    } else if ($('#select_nros').val() == '') {// si no hay numero
                        $('#btnSubbmitAjuste').hide()
                        $('#btnImprimir').hide()
                        $('#btnCancelar').hide()
                        alertTemplate('Debe introducir el número del documento a vizualizar.', 'danger')
                    } else {// si es un Numero valido para cargar
                        $('#btnImprimir').show()
                        $('#btnSubbmitAjuste').hide()
                        $('#btnCancelar').show()
                        llenarFormulario($('#select_nros').val())
                    }
                }
            })

            function llenarFormulario(nro) {
                loadingModal.show()
                $.ajax({
                    url: '/contabilidad/inventario/ajuste-salida/load-ajuste/' + nro,
                    method: 'POST',
                    dataType: 'json',
                    success: function (result) {
                        if (result.success) {
                            let data = result.data;
                            const cuenta = $('#ajuste_salida_nro_cuenta_deudora')
                            const subcuenta = $('#ajuste_nro_subcuenta_deudora')
                            const cuenta_acreedora = $('#ajuste_nro_cuenta_acreedora')
                            const subcuenta_acreedora = $('#ajuste_nro_subcuenta_acreedora')
                            const moneda = $('#ajuste_salida_documento_id_moneda')
                            $('#ajuste_observacion').text(data.observaciones)

                            // datos del Formulario
                            $('#ajuste_salida select').find('option').remove()
                            cuenta.prepend(`<option selected = "false" value = "0" disabled> ${data.nro_cuenta_deudora} </option>`);
                            subcuenta.prepend(`<option selected = "false" value = "0" disabled> ${data.nro_subcuenta_cuenta_deudora} </option>`);
                            cuenta_acreedora.prepend(`<option selected = "false" value = "0" disabled> ${data.nro_cuenta_acreedora} </option>`);
                            subcuenta_acreedora.prepend(`<option selected = "false" value = "0" disabled> ${data.nro_subcuenta_acreedora} </option>`);
                            moneda.prepend(`<option selected = "false" value = "0" disabled> ${data.moneda} </option>`);

                            $('#form_mercancia').css('display', 'none')
                            // datos de la mercancia
                            let mercancias = data.mercancias
                            $("#importe-total").text('$' + data.importe_total)
                            for (var i = 0; i < mercancias.length; i++) {

                                $('#rows_mercancias').append(`<tr>
                                    <td style="font-weight:400;"> ${mercancias[i]['codigo']} </td>
                                    <td style="font-weight:400;"> ${mercancias[i]['cantidad']}</td>
                                    <td style="font-weight:400;"> ${mercancias[i]['importe']}</td>
                                    <td style="font-weight:400;"> ${mercancias[i]['precio']} </td>
                                    <td style="font-weight:400;">${mercancias[i]['existencia']}</td>
                                    <td></td>
                                   </tr>`
                                );
                            }
                            loadingModal.close()
                        } else {
                            loadingModal.close()
                            alertTemplate(result.msg, 'danger')
                        }
                    },
                    error: function () {
                    }
                })
            }

            const loadingData = function () {
                loadingModal.show()
                $('#ajuste_salida select').find('option').remove()
                $('#ajuste_salida select').prepend('<option selected = "false" value = "0" disabled> -- seleccione -- </option>');
                $('#ajuste_salida_id_centro_costo, #ajuste_salida_id_elemento_gasto').find('option').remove()
                $('#ajuste_salida_id_centro_costo,  #ajuste_salida_id_elemento_gasto').prepend('<option selected = "false" value = "0" disabled> -- seleccione -- </option>');

                $('#form_mercancia').css('display', 'block')

                $.ajax({
                    url: '/contabilidad/inventario/ajuste-salida/getCuentas',
                    method: 'POST',
                    dataType: 'json',
                    success: function (result) {
                        cuentas_deudoras = result.cuentas_deudoras
                        $(result.cuentas_deudoras).each(function (pos, valor) {
                            $('#ajuste_salida_nro_cuenta_deudora').append('<option value = "' + valor.nro_cuenta + '">' + valor.nro_cuenta + '</option>');
                        })
                        $(result.centro_costo).each(function (pos, valor) {
                            $('#ajuste_salida_id_centro_costo').append('<option value = "' + valor.id + '">' + valor.nombre + '</option>');
                        })
                        $(result.elemento_gasto).each(function (pos, valor) {
                            $('#ajuste_salida_id_elemento_gasto').append('<option value = "' + valor.id + '">' + valor.nombre + '</option>');
                        })
                        $(result.monedas).each(function (pos, valor) {
                            $('#ajuste_salida_documento_id_moneda').append('<option value = "' + valor.id + '">' + valor.nombre + '</option>');
                        })
                        loadingModal.close()
                    },
                    error: function () {
                    }
                })
            }
            loadingData()

            $('#btnSearchMercancia').on('click', function () {
                $('#rows_table').find('tr').remove();
                let codigo = $('#ajuste_mercancia_codigo').val() != '' ? $('#ajuste_mercancia_codigo').val() : -1
                let cuenta = $('#ajuste_salida_nro_cuenta_deudora').val() != '' ? $('#ajuste_salida_nro_cuenta_deudora').val() : ''
                $.ajax({
                    url: '/contabilidad/inventario/ajuste-salida/getMercancia/' + codigo + ',' + cuenta,
                    method: 'POST',
                    dataType: 'json',
                    success: function (result) {
                        mercancias = result.mercancias
                        $(result.mercancias).each(function (pos, valor) {
                            $('#rows_table').append('<tr>' +
                                '<td style="font-weight:400;"> ' +
                                '<input type="checkbox" style="margin-left: auto;" id="' + valor.codigo + '">' +
                                '</td>' +
                                '<td style="font-weight:400;"> ' + valor.codigo + '</td>' +
                                '<td style="font-weight:400;"> ' + valor.descripcion + '</td>' +
                                '<td style="font-weight:400;"> ' + valor.precio_compra + '</td> </tr>'
                            );
                        })
                    },
                    error: function () {
                    }
                })
            })

            $('#ajuste_salida_mercancia_codigo').on('keyup', function (e) {
                if (e.which == 13) {
                    let codigo = $('#ajuste_salida_mercancia_codigo').val()
                    let cuenta = $('#ajuste_salida_nro_cuenta_deudora').val()
                    if (cuenta != '' && codigo != '') {
                        $.ajax({
                            url: '/contabilidad/inventario/ajuste-salida/getMercancia/' + codigo + ',' + cuenta,
                            method: 'POST',
                            dataType: 'json',
                            success: function (result) {
                                mercancias = result.mercancias
                                if (mercancias.length > 0) {
                                    $('#ajuste_salida_mercancia_descripcion').val(mercancias[0]['descripcion'])
                                    $('#ajuste_salida_mercancia_existencia').val(mercancias[0]['existencia'])
                                    $('#ajuste_salida_mercancia_precio').val(mercancias[0]['precio_compra'])
                                } else {
                                    alertTemplate('No existen mercancias con ese código')
                                }
                            },
                            error: function () {
                                $('#ajuste_salida_mercancia_descripcion').val('')
                                $('#ajuste_salida_mercancia_existencia').val('')
                                $('#ajuste_salida_mercancia_precio').val('')
                            }
                        })
                    } else {
                        alertTemplate('El campo código y cuenta no deben estar vacios.', 'danger')
                    }
                } else {
                    $('#ajuste_salida_mercancia_descripcion').val('')
                    $('#ajuste_salida_mercancia_existencia').val('')
                    $('#ajuste_salida_mercancia_precio').val('')
                }
            })

            /* $('#ajuste_documento_importe_mercancia').on('keyup', function () {
                 let importe = parseFloat($('#ajuste_documento_importe_mercancia').val())
                 let cantidad = parseFloat($('#ajuste_documento_cantidad_mercancia').val())
                 if (importe > 0) {
                     let precio_final = parseFloat(importe / cantidad).toFixed(3)
                     $('#ajuste_salida_mercancia_precio').val(precio_final)
                 } else {
                     $('#ajuste_salida_mercancia_precio').val(0)
                 }
             })*/

            $('#ajuste_salida_documento_cantidad_mercancia').on('keyup', function () {
                let importe = parseFloat($('#ajuste_salida_documento_importe_mercancia').val())
                let cantidad = parseFloat($('#ajuste_salida_documento_cantidad_mercancia').val())
                let precio = parseFloat($('#ajuste_salida_mercancia_precio').val())
                let existencia = parseFloat($('#ajuste_salida_mercancia_existencia').val())

                if (cantidad <= existencia) {
                    if (cantidad > 0) {
                        let importe = parseFloat(precio * cantidad).toFixed(3)
                        $('#ajuste_salida_documento_importe_mercancia').val(importe)
                    } else {
                        $('#ajuste_salida_documento_importe_mercancia').val(0)
                    }
                    if (cantidad == 0 || cantidad == '') {
                        $('#vale_salida_mercancia_existencia_decremento').val(0)
                    } else {
                        let existencia_inicial = (parseFloat($('#ajuste_salida_mercancia_existencia').val()) > 0 || $('#ajuste_salida_mercancia_existencia').val() != '') ? parseFloat($('#ajuste_salida_mercancia_existencia').val()) : 0
                        $('#ajuste_salida_mercancia_existencia_decremento').val(existencia_inicial - cantidad)
                    }
                } else {
                    if (cantidad > 0)
                        alertTemplate('La cantidas supera la existencia', 'danger')
                    $('#ajuste_salida_documento_cantidad_mercancia').val('')
                }
            })

            $('#ajuste_mercancia_codigo').on('keyup', function () {
                $('#ajuste_salida_mercancia_descripcion').val('')
                $('#ajuste_salida_mercancia_precio').val('')
                $('#ajuste_salida_mercancia_existencia').val('')
            })

            $('#ajuste_salida_nro_cuenta_deudora').on('change', function () {
                $('#ajuste_salida_nro_subcuenta_deudora').find('option').remove()
                cuentas_deudoras.forEach(function (valor, pos) {
                    if ($('#ajuste_salida_nro_cuenta_deudora').val() == valor.nro_cuenta) {
                        $('#ajuste_salida_nro_subcuenta_deudora').prepend('<option selected = "false" value = "0" disabled> -- seleccione -- </option>');
                        for (var i = 0; i < valor.sub_cuenta.length; i++) {
                            $('#ajuste_salida_nro_subcuenta_deudora').append('<option value = "' + valor.sub_cuenta[i]['nro_subcuenta'] + '">' + valor.sub_cuenta[i]['nro_subcuenta'] + '</option>');
                        }
                    }
                })
            })

            const form_ajuste_salida = $('#ajuste_salida')

            form_ajuste_salida.validate({
                errorClass: 'invalid-label-orange',
                errorPlacement: function (error, element) {
                    error.attr('style', 'font-size: .8rem;')
                    error.insertAfter(element);
                },
                rules: {
                    'ajuste_salida[observacion]': "required",
                    'ajuste_salida[nro_cuenta_deudora]': "required",
                    'ajuste_salida[nro_subcuenta_deudora]': "required",
                    'ajuste_salida[documento][id_moneda]': "required",
                },
                messages: {
                    'ajuste_salida[observacion]': CONTAB_MSG.REQUIRED_OBLIGATORIO,
                    'ajuste_salida[nro_cuenta_deudora]': CONTAB_MSG.REQUIRED_OBLIGATORIO,
                    'ajuste_salida[nro_subcuenta_deudora]': CONTAB_MSG.REQUIRED_OBLIGATORIO,
                    'ajuste_salida[documento][id_moneda]': CONTAB_MSG.REQUIRED_OBLIGATORIO,
                }
            })

            const form_mercancia = $('#form_mercancia')
            form_mercancia.validate({
                errorClass: 'invalid-label-orange',
                errorPlacement: function (error, element) {
                    error.attr('style', 'font-size: .8rem;')
                    error.insertAfter(element);
                },
                rules: {
                    'ajuste_salida[mercancia][codigo]': "required",
                    'ajuste_salida[mercancia][descripcion]': "required",
                    'ajuste_salida[mercancia][id_unidad_medida]': "required",
                    'ajuste_salida[documento][cantidad_mercancia]': "required",
                    'ajuste_salida[documento][importe_mercancia]': "required",
                    'ajuste_salida[id_centro_costo]': "required",
                    'ajuste_salida[id_elemento_gasto]': "required",
                },
                messages: {
                    'ajuste_salida[mercancia][codigo]': 'Obligatorio!',
                    'ajuste_salida[mercancia][descripcion]': 'Obligatorio!',
                    'ajuste_salida[mercancia][id_unidad_medida]': 'Obligatorio!',
                    'ajuste_salida[documento][cantidad_mercancia]': 'Obligatorio!',
                    'ajuste_salida[documento][importe_mercancia]': 'Obligatorio!',
                    'ajuste_salida[id_centro_costo]': 'Obligatorio!',
                    'ajuste_salida[id_elemento_gasto]': 'Obligatorio!',
                }
            })

            $("#btnSubbmitAjuste").click(function (e) {
                if (form_ajuste_salida.valid()) {
                    if (list_mercancia.length) {
                        let data = form_ajuste_salida.serializeArray()
                        loadingModal.show()
                        data.push({name: 'ajuste_salida[list_mercancia]', value: JSON.stringify(list_mercancia)})
                        $.ajax({
                            url: '/contabilidad/inventario/ajuste-salida/form-add',
                            method: 'POST',
                            data: data,
                            dataType: 'json',
                            success: function (result) {
                                if (result.success) {
                                    window.location.replace('{{ path('contabilidad_inventario_ajuste_salida_gestionar') }}')
                                } else {
                                    loadingModal.close()
                                    alertTemplate(result.msg)
                                }
                            },
                            error: function () {
                            }
                        })
                    } else {
                        alertTemplate('El Ajuste de Entrada debe contener algunas mercancias', 'danger')
                    }
                }
            });

            let list_mercancia = []
            let importe_total = 0;

            $('#btnAplicarMercancia').on('click', function () {
                if (form_mercancia.valid()) {
                    let codigo = $('#ajuste_salida_mercancia_codigo').val()
                    let cant = $('#ajuste_salida_documento_cantidad_mercancia').val()
                    let importe = $('#ajuste_salida_documento_importe_mercancia').val()
                    let precio = $('#ajuste_salida_mercancia_precio').val()
                    let nueva_existencia = $('#ajuste_salida_mercancia_existencia_decremento').val()
                    let um = $('#ajuste_salida_mercancia_id_unidad_medida').val()
                    let descripcion = $('#ajuste_salida_mercancia_descripcion').val()
                    let centro_costo = $('#vale_salida_id_centro_costo').val()
                    let elemento_gasto = $('#vale_salida_id_elemento_gasto').val()

                    //validar que el codigo no se repita
                    if (list_mercancia.some(e => e.codigo === codigo)) {
                        alertTemplate('Ya existe una mercancia con el codigo: <b>' + codigo, 'danger')
                    } else {
                        list_mercancia.push({
                            codigo,
                            cant,
                            importe,
                            precio,
                            nueva_existencia,
                            um,
                            descripcion,
                            centro_costo,
                            elemento_gasto
                        })

                        importe_total += Number.parseFloat(importe)

                        $("#importe-total").text('$' + importe_total)
                        $('#rows_mercancias').append(`<tr>
                        <td style="font-weight:400;"> ${codigo}</td>
                        <td style="font-weight:400;"> ${cant}</td>
                        <td style="font-weight:400;"> ${importe}</td>
                        <td style="font-weight:400;"> ${precio} </td>
                        <td style="font-weight:400;">${nueva_existencia}</td>
                        <td style="font-weight:400;" hidden> ${descripcion}</td>
                        <td> <button type="button"
                            class="btn btn-outline-danger btn-sm borrar" title="Eliminar" id-mercancia="${codigo}">
                            <i class="fa fa-minus-circle"></i>
                        </button>
                        </td>
                        <td style="font-weight:400;" hidden> ${um} </td> </tr>`
                        );
                        $('#ajuste_salida_mercancia_codigo').val('')
                        $('#ajuste_salida_mercancia_descripcion').val('')
                        $('#ajuste_salida_mercancia_existencia').val('')
                        $('#ajuste_salida_documento_cantidad_mercancia').val('')
                        $('#ajuste_salida_documento_importe_mercancia').val('')
                        $('#ajuste_salida_mercancia_precio').val('')
                        $('#ajuste_salida_mercancia_existencia_decremento').val('')
                        $('#ajuste_salida_id_centro_costo').val(0)
                        $('#ajuste_salida_id_elemento_gasto').val(0)
                    }

                }
            })

            // eliminar la mercancia de la lista
            $(document).on('click', '.borrar', function (event) {
                event.preventDefault();
                const mercancia = list_mercancia.find(e => e.codigo === $(this).attr('id-mercancia'))
                importe_total -= Number.parseFloat(mercancia.importe)
                $("#importe-total").text('$' + importe_total)
                list_mercancia = list_mercancia.filter(e => e.codigo !== $(this).attr('id-mercancia'))
                $(this).closest('tr').remove()
            })
        })

        function SeleccionarMercancia() {
            for (var i = 0; i < mercancias.length; i++) {
                let id = '#' + mercancias[i]['codigo']
                if ($(id).prop('checked') == true) {
                    $('#ajuste_salida_mercancia_codigo').val(mercancias[i]['codigo'])
                    $('#ajuste_salida_salida_mercancia_descripcion').val(mercancias[i]['descripcion'])
                    $('#ajuste_salida_salida_mercancia_precio').val(mercancias[i]['precio_compra'])
                    $('#ajuste_salida_salida_mercancia_existencia').val(mercancias[i]['existencia'])
                    break
                }
            }
        }


    </script>
{% endblock %}

