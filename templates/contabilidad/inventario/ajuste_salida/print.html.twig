<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    {#Style#}
    <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>
    <link rel="stylesheet" href="{{ asset('css/contabilidad_styles.css') }}">
    <style>
        @media print {
            #footer {
                position: fixed;
                display: block;
                bottom: 0;
            }
        }
    </style>

    <title>Imprimir Ajuste Entrada</title>
</head>
<body>
<div class="container-fluid mt-3 d-flex flex-column" style="height: 1000px;">
    <table border="1" width="960px" class="mt-1">
        <tbody>
        <tr>
            <td colspan="7" height="70px" class="font-weight-bold text-center">AJUSTE DE SALIDA</td>
        </tr>
        <tr>
            <td colspan="6"><strong>Unidad:</strong> {{ datos.unidad }}</td>
            <td colspan="1" width="200px" class="text-center"><strong>Fecha: </strong>{{ datos.fecha_ajuste }}</td>
        </tr>
        <tr>
            <td colspan="7"><strong>Almacén: </strong>{{ datos.almacen }}</td>
        </tr>
        </tbody>
    </table>
    <table border="1" width="960px">
        <tbody>
        <th>
            <td width="100" class="text-center"><strong>Código</strong></td>
            <td width="100" class="text-center"><strong>Descripción</strong></td>
            <td width="100" class="text-center"><strong>Centro Costo</strong></td>
            <td width="100" class="text-center"><strong>Elemento Gasto</strong></td>
            <td width="100" class="text-center"><strong>Cantidad</strong></td>
            <td width="100" class="text-center"><strong>Precio</strong></td>
            <td width="100" class="text-center"><strong>Importe</strong></td>
            <td width="100" class="text-center"><strong>Existencia</strong></td>
        </th>
        </tbody>
    </table>
    <table border="0px;" width="960px">
        <tbody>
        {% for item in mercancias %}
            <tr>
                <td width="80">{{ item.codigo }}</td>
                <td width="100">{{ item.descripcion }}</td>
                <td width="100">{{ item.centro_costo }}</td>
                <td width="100">{{ item.elemento_gasto }}</td>
                <td width="100" class="text-right">{{ item.cantidad }}</td>
                <td width="100" class="text-right">{{ item.precio }}</td>
                <td width="100" class="text-right">{{ item.importe }}</td>
                <td width="100" class="text-right">{{ item.existencia }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <table border="0px" class="mt-5" width="960px" height="70px">
        <tbody>
        <tr>
            <td class="font-weight-bold text-center" colspan="5">IMPORTE TOTAL</td>
            <td width="100" class="font-weight-bold text-right">{{ datos.importe_total }}</td>
            <td width="100" class="font-weight-bold text-center"></td>
        </tr>
        <tr>
            <td colspan="7" class="font-weight-bold">Observación:</td>
        </tr>
        <tr>
            <td colspan="7">{{ datos.observacion }}</td>
        </tr>
        </tbody>
    </table>
    <table border="1px" width="960px" id="footer" class="mt-1">
        <tbody>
        <tr class="mt-1">
            <td valign="TOP" width="155" height="75px;" class="text-capitalize"><strong>Jefe de Almacén</strong>
            </td>
            <td valign="TOP" width="230"><strong>Transportador</strong></td>
            <td valign="TOP" width="155"><strong>Recepciona</strong></td>
            <td valign="TOP" width="155"><strong>Contabiliza</strong></td>
            <td valign="TOP" width="165"><strong>Submayor</strong></td>
            <td valign="TOP" width="100" class="text-center"><strong> AS-{{ datos.nro_solicitud }}</strong></td>
        </tr>
        </tbody>
    </table>
</div>

{#JavaScript#}
<script src="{{ asset('js/core.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/script.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/contabilidad.js') }}" type="text/javascript"></script>

</body>
</html>