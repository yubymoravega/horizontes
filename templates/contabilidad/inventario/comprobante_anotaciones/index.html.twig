{% extends 'contabilidad/inventario/index.html.twig' %}

{% block title %}Economía | Comprobante de Operaciones{% endblock %}

{% block content %}
    <div class="container-fluid">

        {# header #}
        <div class="d-flex align-items-center">
            <h4 class="mr-auto display-4 mb-0 mr-auto title-table text-light">
                Comprobante de Operaciones
            </h4>
        </div>
        {# end header #}

        {# list#}
        <table class="table-small-rows table table-hover text-light">
            <thead class="thead-dark">
            <th width="70px">Documento</th>
            <th width="70px">Fecha</th>
            <th width="175px">Cuenta</th>
            <th width="120px">Subcuenta</th>
            <th width="120px">Análisis 1</th>
            <th width="120px">Análisis 2</th>
            <th width="120px">Débitos</th>
            <th width="120px">Créditos</th>
            </thead>
            <tbody>
            {% for item in datos %}
                <tr>
                    <td style="font-weight:400;">{{ item.nro_doc }}</td>
                    <td style="font-weight:400;">{{ item.fecha }}</td>
                    <td style="font-weight:400;">{{ item.nro_cuenta }}</td>
                    <td style="font-weight:400;">{{ item.nro_subcuenta }}</td>
                    <td style="font-weight:400;">{{ item.analisis_1 }}</td>
                    <td style="font-weight:400;">{{ item.analisis_2 }}</td>
                    <td style="font-weight:400;">{{ item.debito }}</td>
                    <td style="font-weight:400;">{{ item.credito }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# end list #}
    </div>
{% endblock %}
