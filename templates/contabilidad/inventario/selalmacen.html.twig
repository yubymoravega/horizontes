{% extends 'base.html.twig' %}
{% block style %}
    <style>
        label {
            display: none;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="modal fade" id="selecionarAlmacen" tabindex="-1" role="dialog" data-backdrop="static"
         data-keyboard="false"
         aria-labelledby="seleccionarAlmacenLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h4 class="modal-title text-light" id="seleccionarAlmacenLabel">Seleccine el almacén</h4>
                    <button class="close text-light" type="button" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group input-group input-group-sm">
                        <label for="almacenes_select" class="font-weight-bold">Almacén</label>
                        <select name="almacenes_select" id="almacenes_select" class="form-control">
                            {% for item in almacenes %}
                                <option value="{{ item.id }}">{{ item.descripcion }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="modal-footer d-flex">
                    <div class="mr-auto">
                        <button class="btn btn-outline-secondary" type="button" data-dismiss="modal"
                                aria-label="Cerrar">
                            <span aria-hidden="true">Cancelar</span>
                        </button>
                    </div>
                    <div class="ml-2">
                        <button type="button" class="my-0 btn btn-primary" id="btnAceptar">Aceptar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#selecionarAlmacen').modal('show')
        })

        $('#btnAceptar').on('click',function(){
            $.ajax({
                url: '/contabilidad/inventario/seleccionarAlmacen',
                method: "POST",
                data: {id_almacen:$('#almacenes_select').val()}
            }).then(res => {
                window.location.replace('/contabilidad/inventario');
            })
        })
    </script>
{% endblock %}