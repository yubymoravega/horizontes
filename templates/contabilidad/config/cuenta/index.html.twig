{% extends 'contabilidad/config/index.html.twig' %}
{% block style %}
    <style>
        label {
            display: none;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        {# header #}
        <div class="d-flex align-items-center">
            <h5 class="mr-auto display-4 mb-0 mr-auto title-table text-light">
                Cuentas
            </h5>
            <div>
                <button type="button" class="btn btn-primary btn-sm" data-toggle="modal"
                        data-target="#modal__form__id" data-placement="bottom" title="Adicionar"
                        onclick="mostrarBtn()">
                    <i class="fa fa-plus"> Adicionar</i>
                </button>
                <button type="button" class="btn btn-warning btn-sm" data-placement="bottom" title="Imprimir">
                    <i class="fa fa-print"></i>
                </button>
            </div>
        </div>
        {# end header #}

        {# Modal de adicionar#}

        {{ include('./contabilidad/config/cuenta/form_modal.html.twig', {title:'Crear Cuenta'}) }}

        {# list #}
        <table class="table table-hover text-light">
            <thead class="thead-dark">
            <th scope="col-1" style="width: 160px">Nro. cuenta</th>
            <th scope="col-6">Descripción</th>
            <th scope="col-6" width="90px">Naturaleza</th>
            <th scope="col-1" width="90px">Producción</th>
            <th scope="col-1" width="85px">Patrimonio</th>
            <th scope="col-1" width="130px">E. Gasto</th>
            <th scope="col-1" style="width: 200px" width="200px">Acciones</th>
            </thead>
            <tbody>
            {% for item in cuentas %}
                <tr>
                    <td style="font-weight:400;">{{ item.nro_cuenta }}</td>
                    <td style="font-weight:400;">{{ item.descripcion }}</td>
                    <td style="font-weight:400;">{{ item.deudora }}</td>
                    <td style="font-weight:400;">{{ item.produccion }}</td>
                    <td style="font-weight:400;">{{ item.patrimonio }}</td>
                    <td style="font-weight:400;">{{ item.elemento_gasto }}</td>
                    <td style="width: 375px">
                        <a type="button" class="btn btn-info btn-sm" data-toggle="tooltip"
                           data-placement="bottom" title="Ver subcuentas"
                           href="{{ path('contabilidad_config_subcuenta',{id:item.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <button type="button" class="btn btn-warning btn-sm" data-toggle="tooltip"
                                data-placement="bottom" title="Modificar"
                                onclick="onUpdate({
                                        nro_cuenta: '{{ item.nro_cuenta }}',
                                        descripcion:'{{ item.descripcion }}',
                                        deudora:'{{ item.deudora }}' ,
                                        patrimonio:'{{ item.patrimonio }}' ,
                                        produccion:'{{ item.produccion }}' ,
                                        elemento_gasto:'{{ item.elemento_gasto }}' ,
                                        id: '{{ item.id }}'
                                        })">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip"
                                data-placement="bottom" title="Eliminar"
                                onclick="onDeleteConfirm({
                                        message:'Está seguro que desea eliminar la cuenta {{ item.nro_cuenta }} ?',
                                        url:'{{ path('contabilidad_config_cuenta_delete',{id: item.id}) }}',
                                        _token: '{{ csrf_token('delete' ~ item.id) }}'
                                        })">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# end list #}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>

        function mostrarBtn() {
            $('#modal__btn__actualizar').hide()
            $('#modal__btn__aceptar').show()

            /*$('#id_cuenta').val('')
            $('#cuenta_nro_cuenta').val('')
            $('#cuenta_descripcion').val('')
            $('#produccion_check').prop('checked', false)
            $('#patrimonio_check').prop('checked', false)
            $('#elemento_gasto_check').prop('checked', false)*/

        }

        function onViewSuncuentas(id) {
            window.location.replace('/contabilidad/config/subcuenta/' + id);
        }

        const onUpdate = function (config) {
            $('#modal__btn__actualizar').show()
            $('#modal__btn__aceptar').hide()

            const {
                nro_cuenta = '', id = '', deudora = '', descripcion = '',
                produccion = '', patrimonio = '', elemento_gasto = ''
            } = config

            $('#modal__form__id').modal('show')
            $('#gestionarUnidadModalLabel').html("Modificar " + nro_cuenta)

            $('#id_cuenta').val(id)
            $('#cuenta_nro_cuenta').val(nro_cuenta)
            $('#cuenta_descripcion').val(descripcion)
            if (produccion == 'SI')
                $('#produccion_check').prop('checked', true)
            else
                $('#produccion_check').prop('checked', false)
            if (patrimonio == 'SI')
                $('#patrimonio_check').prop('checked', true)
            else
                $('#patrimonio_check').prop('checked', false)
            if (elemento_gasto == 'SI')
                $('#elemento_gasto_check').prop('checked', true)
            else
                $('#elemento_gasto_check').prop('checked', false)

            //tengo q hacer lo del select
            if (deudora == 'Deudora') {
                $('#select2-naturaleza_cuenta-container')[0].textContent = 'Deudora'
                $('#select2-naturaleza_cuenta-container').val(1)
                $('#naturaleza_cuenta').val(1)
            } else {
                $('#select2-naturaleza_cuenta-container')[0].textContent = 'Acreedora'
                $('#select2-naturaleza_cuenta-container').val(0)
                $('#naturaleza_cuenta').val(0)
            }
        }
        $(document).ready(function () {
            $('#modal__btn__actualizar').hide()

            // validacion del formulario
            var validateForm = $('#form_modal_target').validate({
                errorClass: 'invalid-label-orange',
                errorPlacement: function (error, element) {
                    // colocar mensajes de error a la derecha de cada label para el componente
                    console.log(error)
                    const error_label = element.closest("form").find(element.attr('id') + "-error")
                    if (error_label.length) {
                        error_label.removeClass('hide')
                    } else {
                        error.addClass('ml-3')
                        $(element)
                            .closest("form")
                            .find("label[for='" + element.attr("id") + "']")
                            .append(error);
                    }
                },
                rules: {
                    'cuenta[nro_cuenta]': "required",
                    'cuenta[descripcion]': "required",
                },
                messages: {
                    'cuenta[nro_cuenta]': CONTAB_MSG.REQUIRED_NOT_BLANK,
                    'cuenta[descripcion]': CONTAB_MSG.REQUIRED_NOT_BLANK,
                }
            })

            $('#modal__btn__aceptar').on('click', function () {
                let params = {
                    patrimonio: $('#patrimonio_check').prop('checked') == true ? 1 : 0,
                    produccion: $('#produccion_check').prop('checked') == true ? 1 : 0,
                    elemento_gasto: $('#elemento_gasto_check').prop('checked') == true ? 1 : 0,
                    deudora: $('#naturaleza_cuenta').val(),
                    nro_cuenta: $('#cuenta_nro_cuenta').val(),
                    descripcion: $('#cuenta_descripcion').val()
                }

                const formulario = $('#form_modal_target')
                formulario.attr('method', `POST`)
                formulario.attr('action', `/contabilidad/config/cuenta/add`)
                formulario.submit()


                /*$.ajax({
                    url: '/contabilidad/config/cuenta-add',
                    method: "POST",
                    data: params
                }).then(res => {
                    window.location.replace('/contabilidad/config/cuenta');
                })*/
            })
            $('#modal__btn__actualizar').on('click', function () {
                let params = {
                    patrimonio: $('#patrimonio_check').prop('checked') == true ? 1 : 0,
                    produccion: $('#produccion_check').prop('checked') == true ? 1 : 0,
                    elemento_gasto: $('#elemento_gasto_check').prop('checked') == true ? 1 : 0,
                    deudora: $('#naturaleza_cuenta').val(),
                    nro_cuenta: $('#cuenta_nro_cuenta').val(),
                    descripcion: $('#cuenta_descripcion').val(),
                    id_cuenta: $('#id_cuenta').val()
                }
                $.ajax({
                    url: '/contabilidad/config/cuenta-upd',
                    method: "POST",
                    data: params
                }).then(res => {
                    window.location.replace('/contabilidad/config/cuenta');
                })
            })

            $('#modal__form__id').on('show.bs.modal', function (event) {
                $('#modal__form__label__id').text('Adicionar cuenta')
            })

            /****-Eventos para validar que no seleccione los dos tipos de cuentas(patrimonio y producción) a la vez-*****/
            $('#patrimonio_check').on('change', function () {
                if ($('#patrimonio_check').is(':checked'))
                    $('#produccion_check').prop('checked', false)
            })
            $('#produccion_check').on('change', function () {
                if ($('#produccion_check').is(':checked'))
                    $('#patrimonio_check').prop('checked', false)
            })

        })
    </script>
{% endblock %}

