{% block body %}
    <div>
        {% for item in datos %}
            <div style="page-break-before: always;"></div>
            <table border="1px" width="800px" class="mt-3">
                <tr>
                    <td class="text-left font-weight-bold">{{ unidad }}</td>
                    <td class="text-right font-weight-bold">RNC-{{ unidad_codigo }}</td>
                </tr>
                <tr class="p-3 m-3">
                    <td colspan="2" class="p-3 m-3 text-center font-weight-bold">Recibo de pago n칩mina
                        {% if quincena == 3 %}Pago Extraordinario {% elseif quincena == 2 %}2da Quincena {% else %}1ra Quincena{% endif %}
                        {{ mes }} {{ anno }}
                    </td>
                </tr>
                <tr>
                    <td colspan="2"><strong>Nombre:</strong> {{ item.empleado }}</td>
                </tr>
                <tr>
                    <td colspan="2"><strong>Salario mensual:</strong> {{ item.sueldo_mes }}</td>
                </tr>
                <tr>
                    <td class="bg-gray font-weight-bold text-uppercase text-left ml-3">Concepto</td>
                    <td class="bg-gray font-weight-bold text-uppercase text-right mr-3">Total</td>
                </tr>
                <tr>
                    <td>Salario Quincena</td>
                    <td class="text-right">{{ item.sueldo_bruto }}</td>
                </tr>
                {% if item.comision != '0.00' %}
                <tr>
                    <td>Comisiones</td>
                    <td class="text-right">{{ item.comision }}</td>
                </tr>
                {% endif %}

                {% if item.vacaciones != '0.00' %}
                <tr>
                    <td>Vacaciones</td>
                    <td class="text-right">{{ item.vacaciones }}</td>
                </tr>
                {% endif %}

                {% if item.horas_extra != '0.00' %}
                    <tr>
                        <td>Horas Extra</td>
                        <td class="text-right">{{ item.horas_extra }}</td>
                    </tr>
                {% endif %}

                {% if item.otros != '0.00' %}
                    <tr>
                        <td>Otros</td>
                        <td class="text-right">{{ item.otros }}</td>
                    </tr>
                {% endif %}
                <tr>
                    <td>Total Ingresos</td>
                    <td class="text-right">{{ item.total_ingresos }}</td>
                </tr>
                <tr>
                    <td>Total Deducido</td>
                    <td class="text-right">{{ item.total_deducido }}</td>
                </tr>
                <tr>
                    <td>Sueldo Neto a Pagar</td>
                    <td class="text-right">{{ item.sueldo_neto_pagar }}</td>
                </tr>
                <tr>
                    <td colspan="2" class="font-weight-bold">Recibido conforme por</td>
                </tr>
                <tr>
                    <td colspan="2" class="font-weight-bold">Nombre:</td>
                </tr>
                <tr>
                    <td colspan="2" class="font-weight-bold">Firma:</td>
                </tr>
                <tr>
                    <td colspan="2" class="text-right"><strong>Fecha:</strong> {{ fecha_impresion }}</td>
                </tr>
            </table>
        {% endfor %}

