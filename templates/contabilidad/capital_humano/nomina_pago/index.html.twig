{% extends 'contabilidad/capital_humano/index.html.twig' %}
{% block style %}
    <style>
        label {
            display: none;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="container-fluid">

        {# header #}
        <div class="d-flex align-items-center">
            <h4 class="mr-auto display-4 mb-0 mr-auto title-table text-light">
                Plantilla de la Empresa (Nómina de Pago)
            </h4>
            <div>
                <button type="button" class="btn btn-warning btn-sm" data-placement="bottom"
                        title="Imprimir Nomina de Pago"
                        onclick="Print('{{ path('contabilidad_capital_humano_plantilla_imprimir') }}')">
                    <i class="fa fa-print"></i>
                </button>
            </div>
        </div>
        {# end header #}


        {# list #}
        <table class="table table-hover text-light">
            <thead class="thead-dark">
            <th width="30px">#</th>
            <th scope="col-1">Nombre</th>
            <th width="150px" class="text-center">Cantidad de Hrs</th>
            <th width="150px" class="text-center">Salario x Hrs</th>
            <th width="150px" class="text-center">Sueldo Bruto</th>
            <th width="150px" class="text-center">Comisión</th>
            <th width="150px" class="text-center">Vacaciones</th>
            <th width="150px" class="text-center">Horas Extra</th>
            <th width="150px" class="text-center">Total de Ingresos</th>
            <th width="150px" class="text-center">Ingresos Cotizables a TSS</th>
            <th width="150px" class="text-center">Sueldo Neto a Pagar</th>
            <th width="150px">Acciones</th>
            </thead>
            <tbody>
            {% for item in empleados %}
                <tr>
                    <td style="font-weight:400;">{{ item.nro }}</td>
                    <td style="font-weight:400;">{{ item.nombre }}</td>
                    <td style="font-weight:400;">{{ item.sueldo_bruto }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td style="font-weight:400;">{{ item.comision_mensual }}</td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm w-50" data-toggle="tooltip"
                                data-placement="bottom" title="Pagar"
                                onclick="Pagar({{ item.id }})">
                            <i class="fa fa-dollar"></i>
                        </button>
                        <button type="button" class="btn btn-warning btn-sm" data-toggle="tooltip"
                                data-placement="bottom" title="Imprimir"
                                onclick="onDeleteConfirm({
                                        message:'Está seguro que desea eliminar cargo seleccionado ?',
                                        url:'{{ path('contabilidad_capital_humano_cargo_delete',{id: item.id}) }}'
                                        })">
                            <i class="fa fa-print"></i>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# end list #}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        function Print(url) {
            window.open(url, 'blank_')
        }
        function Pagar(id) {
            window.location.replace('/contabilidad/capital-humano/nomina-pago/pagar/' + id);
        }
    </script>
{% endblock %}