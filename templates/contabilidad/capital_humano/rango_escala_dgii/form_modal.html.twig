{% extends 'utils/modal_form.html.twig' %}

{% block modalbody %}
    {{ form_start(form,{'attr': {'class': 'text-left','id':'form_modal_target','method':'POST','autocomplete':"off"}}) }}
    <div class="form-group input-group input-group-sm d-block">
        {{ form_label(form.escala) }}
        {{ form_widget(form.escala,{'attr': {'class': 'form-control w-100','id':'nombre_field'}}) }}
    </div>

    <div class="row mt-0 p-0">
        <div class="col-6 form-group input-group input-group-sm pa-2 d-block">
            {{ form_label(form.minimo) }}
            {{ form_widget(form.minimo,{'type':'number','attr': {'class': 'form-control w-100'}}) }}
        </div>
        <div class="col-6 form-group input-group input-group-sm mt-0 pt-0 d-block">
            {{ form_label(form.maximo) }}
            {{ form_widget(form.maximo,{'type':'number','attr': {'class': 'form-control w-100'}}) }}
        </div>
    </div>

    <div class="row mt-0 p-0">
        <div class="col-4 form-group input-group input-group-sm pa-2 d-block">
            {{ form_label(form.valor_fijo) }}
            {{ form_widget(form.valor_fijo,{'type':'number','attr': {'class': 'form-control w-100'}}) }}
        </div>
        <div class="col-4 form-group input-group input-group-sm mt-0 pt-0 d-block">
            {{ form_label(form.anno) }}
            {{ form_widget(form.anno,{'type':'number','attr': {'class': 'form-control w-100'}}) }}
        </div>
        <div class="col-4 form-group input-group input-group-sm mt-0 pt-0 d-block">
            {{ form_label(form.por_ciento) }}
            {{ form_widget(form.por_ciento,{'type':'number','attr': {'class': 'form-control w-100'}}) }}
        </div>
    </div>

    <input type="text" id="id_rango" hidden>
    {{ form_end(form) }}
{% endblock %}