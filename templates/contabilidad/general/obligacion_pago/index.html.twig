{% extends 'contabilidad/general/index.html.twig' %}
{% block style %}
    <style>
        label {
            display: none;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="container-fluid">

        {# header #}
        <div class="d-flex align-items-center">
            <h4 class="mr-auto display-4 mb-0 mr-auto title-table text-light">
                Obligaciones de pago
            </h4>
        </div>
        {# end header #}

       {# list#}
        <table class="table table-hover text-light">
            <thead class="thead-dark">
            <th width="158px">CÃ³dico de factura</th>
            <th width="180px">Fecha </th>
            <th width="150px">A pagar</th>
            <th scope="col-1">Proveedor</th>
            <th scope="col-1">Antiguedad</th>
            <th width="150px">Acciones</th>
            </thead>
            <tbody>
            {% for item in obligaciones %}
                <tr>
                    <td style="font-weight:400;">{{ item.codigo }}</td>
                    <td style="font-weight:400;">{{ item.fecha }}</td>
                    <td style="font-weight:400;">{{ item.resto }}</td>
                    <td style="font-weight:400;">{{ item.proveedor }}</td>
                    <td style="font-weight:400;">{{ item.descripcion }}</td>
                    <td>
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip"
                            data-placement="bottom" title="Pagar">
                        <i class="fa fa-money"></i>
                    </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# end list #}
    </div>
{% endblock %}