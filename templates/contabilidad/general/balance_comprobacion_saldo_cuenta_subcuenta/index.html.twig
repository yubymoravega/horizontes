{% extends 'contabilidad/general/index.html.twig' %}
{% block style %}
    <style>
        label {
            display: none;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="container-fluid">

        {# header #}
        <div class="d-flex align-items-center">
            <h4 class="mr-auto display-4 mb-0 mr-auto title-table text-light">
                Balance de Comprobación de Saldo Cuenta y Subcuenta
            </h4>
{#            <button type="button" class="btn btn-warning btn-sm" data-placement="bottom"#}
{#                    title="Imprimir Registro de Comprobantes"#}
{#                    onclick="Print('{{ path('contabilidad_general_registro_comprobantes_print') }}')">#}
{#                <i class="fa fa-print"></i>#}
{#            </button>#}
        </div>
        {# end header #}


        {# list #}
        <table class="table-small-rows table table-hover text-light">
            <tr class="bg-dark font-weight-bold">
                <td rowspan="2" width="100px">Cuenta</td>
                <td rowspan="2" width="100px">Subcuenta</td>
                <td rowspan="2" class="text-center">Descripción</td>
                <td colspan="2" width="260px" class="text-center">Movimientos del Mes</td>
                <td rowspan="2" width="160px" class="text-center">Saldo Acumulado</td>
            </tr>
            <tr class="bg-dark font-weight-bold">
                <td width="130px" class="text-center">Débito</td>
                <td width="130px" class="text-center">Crédito</td>
            </tr>
            <tbody>
            {% for item in cuentas %}
                {% if item.cuenta != '' and item.subcuenta == '' %}
                    <tr style="background-color: black;">
                        <td style="font-weight:400;">{{ item.cuenta }}</td>
                        <td style="font-weight:400;" class="pl-0 pr-0">{{ item.subcuenta }}</td>
                        <td style="font-weight:400;" class="pl-0 pr-0">{{ item.descripcion }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.debito_mes }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.credito_mes }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.debito_acumulado }}</td>
                    </tr>
                {% elseif item.cuenta == '' and item.subcuenta != '' %}
                    <tr class="row-group-subconta">
                        <td style="font-weight:400;">{{ item.cuenta }}</td>
                        <td style="font-weight:400;" class="pl-0 pr-0">{{ item.subcuenta }}</td>
                        <td style="font-weight:400;" class="pl-0 pr-0">{{ item.descripcion }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.debito_mes }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.credito_mes }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.debito_acumulado }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td style="font-weight:400;">{{ item.cuenta }}</td>
                        <td style="font-weight:400;" class="pl-0 pr-0">{{ item.subcuenta }}</td>
                        {% if item.index == 2 or item.index == '2' %}
                            <td style="font-weight:400;" class="pl-0 pr-0"><a
                                >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>{{ item.descripcion }}</td>
                        {% elseif item.index == 3 or item.index == '3' %}
                            <td style="font-weight:400;" class="pl-0 pr-0"><a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>{{ item.descripcion }}
                            </td>
                        {% else %}
                            <td style="font-weight:400;" class="pl-0 pr-0">{{ item.descripcion }}</td>
                        {% endif %}
                        <td style="font-weight:400;" class="text-right">{{ item.debito_mes }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.credito_mes }}</td>
                        <td style="font-weight:400;" class="text-right">{{ item.debito_acumulado }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
        {# end list #}
        <div class="navigation">
            {{ knp_pagination_render(cuentas) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function Print(url) {
            window.open(url, 'blank_')
        }
    </script>
{% endblock %}