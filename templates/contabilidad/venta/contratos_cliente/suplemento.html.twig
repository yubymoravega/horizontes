
{# Modal del formulario #}
<div class="modal fade" id="modal_suplemento_id" tabindex="-1" role="dialog"
     data-backdrop="static"
     data-keyboard="false"
     aria-labelledby="modal_suplemento_id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h4 class="modal-title text-light">Suplemento</h4>
                <button class="close text-light" type="button" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-dark-app">
                <div id="data_contrato">

                </div>
                <form id="form_suplemento_id">
                    <div class="row pt-0 mt-0">
                        <div class="col-6 form-group input-group input-group-sm d-block">
                            <label for="importe_suplemento_id">Nuevo Importe</label>
                            <input class="form-control w-100" type="number" name="suplemento[importe]"
                                   id="importe_suplemento_id" required="required">
                        </div>
                        <div class="col-6 mt-0 form-group input-group input-group-sm d-block">
                            <label for="importe_suplemento_id">Fecha de vencimiento</label>
                            <input type="date" id="fecha_vencimiento_suplemento_id"
                                   name="suplemento[fecha_vencimiento]" required="required"
                                   class="form-control w-100">

                        </div>
                    </div>
                    <input type="hidden" name="id_contrato" id="supelemento_id_contrato">
                </form>
                <div class="d-flex mt-4">
                    <button class="btn btn-outline-secondary mr-auto" type="button" data-dismiss="modal"
                            aria-hidden="true">Cancelar
                    </button>
                    <button type="button" class="my-0 btn btn-secondary" id="suplemento__btn__aceptar">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
</div>